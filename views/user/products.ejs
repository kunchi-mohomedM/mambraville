<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-commerce Product Listing</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <%-include("../../views/partials/user/header")-%>
    </header>

<!-- Sort, Filter & Search Section (below header) -->
    <!-- Sort, Filter & Search Section (Unified Form) -->
<div class="bg-white py-4 px-4 rounded-xl shadow-md mb-6 mt-4 mx-4">
  <form id="filterForm" action="/products-user" method="GET" 
        class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">

    <!-- ðŸ” Search -->
    <div class="relative w-full md:w-1/3">
      <input 
        type="text" 
        id="searchInput" 
        name="search"
        value="<%= queryParams.search || '' %>"
        placeholder="Search products..."
        class="w-full border rounded-full py-2 pl-10 pr-4 focus:outline-none focus:ring-2 focus:ring-purple-500 text-gray-700"
      >
      <i class="fa fa-search absolute left-3 top-2.5 text-gray-400"></i>
    </div>

    <!-- ðŸ·ï¸ Category -->
    <div class="flex items-center space-x-2">
      <label for="categorySelect" class="text-sm text-gray-600 font-medium">Category:</label>
      <select id="categorySelect" name="category"
        class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-500 text-gray-700">
        <option value="">All</option>
        <option value="Laptops" <%= queryParams.category === 'Laptops' ? 'selected' : '' %>>Laptops</option>
        <option value="Mobiles" <%= queryParams.category === 'Mobiles' ? 'selected' : '' %>>Mobiles</option>
        <option value="Televisions" <%= queryParams.category === 'Televisions' ? 'selected' : '' %>>Televisions</option>
      </select>
    </div>

    <!-- ðŸ”½ Sort -->
    <div class="flex items-center space-x-2">
      <label for="sortSelect" class="text-sm text-gray-600 font-medium">Sort:</label>
      <select id="sortSelect" name="sort"
        class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-500 text-gray-700">
        <option value="">Default</option>
        <option value="priceasc" <%= queryParams.sort === 'priceasc' ? 'selected' : '' %>>Price: Low to High</option>
        <option value="pricedesc" <%= queryParams.sort === 'pricedesc' ? 'selected' : '' %>>Price: High to Low</option>
        <option value="newest" <%= queryParams.sort === 'newest' ? 'selected' : '' %>>Newest</option>
        <option value="oldest" <%= queryParams.sort === 'oldest' ? 'selected' : '' %>>Oldest</option>
        <option value="popular" <%= queryParams.sort === 'popular' ? 'selected' : '' %>>Popular</option>
      </select>
    </div>

    <!-- Apply Button -->
    <button type="submit" 
      class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition">
      Apply
    </button>

  </form>
</div>



    </div>
    <!-- Breadcrumb -->
    <div class="container mx-auto mt-4 px-4">
        <nav class="text-sm">
            <ol class="list-none p-0 flex">
                <li class="flex items-center">
                    <a href="#" class="text-gray-600">Home</a>
                    <span class="mx-2 text-gray-500">/</span>
                </li>
                <li class="text-gray-800 font-medium">Products</li>
            </ol>
        </nav>
    </div>



    <!-- Main Content -->
    <main class="container mx-auto mt-4 px-4">
      
        <!-- Products Grid -->
        <div class="mb-8">
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                <!-- Product 1 -->

                <% products.forEach(product=>{ %>
                    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all">
                        <a href="#">
                            <img onclick="window.location.href = '/productdetails/<%= product._id %>'"
                                src="<%= product.productImage[0]?.url%>" alt="Product" class="w-full h-40 object-fill p-2 px-4">
                            <div class="p-4">
                                <div class="flex items-center mb-2">
                                    <div class="flex text-yellow-400">
                                        <i class="fas fa-star text-xs"></i>
                                        <i class="fas fa-star text-xs"></i>
                                        <i class="fas fa-star text-xs"></i>
                                        <i class="fas fa-star text-xs"></i>
                                        <i class="fas fa-star text-xs"></i>
                                    </div>
                                    <span class="text-xs text-gray-500 ml-1">(5)</span>
                                </div>
                                <h3 class="font-medium text-sm mb-1 truncate">
                                    <%= product.productName %>
                                </h3>
                                <p class="text-gray-900 font-bold text-sm">
                                    $<%=product.price%>
                                </p>
                                <a href="/add-to-cart/<%= product._id %>" 
                                    class="mt-2 w-full text-center bg-purple-600 text-white rounded-full p-2 block">
                                    <i class="fas fa-shopping-cart text-xs"></i> Add to Cart
                                </a>

                            </div>
                        </a>
                    </div>
                    <% }) %>
            </div>
        </div>

        <!-- Pagination -->
        <div class="flex justify-center items-center my-6">
            <nav class="flex items-center space-x-1">
                <% if (currentPage > 1) { %>
                    <a href="?<%= new URLSearchParams({ ...queryParams, page: currentPage - 1 }).toString() %>"
                       class="px-3 py-1 rounded border border-gray-300 text-sm">
                        <i class="fas fa-chevron-left text-xs"></i>
                    </a>
                <% } %>
        
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?<%= new URLSearchParams({ ...queryParams, page: i }).toString() %>"
                       class="px-3 py-1 rounded border border-gray-300 text-sm <%= i === currentPage ? 'bg-blue-600 text-white' : '' %>">
                        <%= i %>
                    </a>
                <% } %>
        
                <% if (currentPage < totalPages) { %>
                    <a href="?<%= new URLSearchParams({ ...queryParams, page: currentPage + 1 }).toString() %>"
                       class="px-3 py-1 rounded border border-gray-300 text-sm">
                        <i class="fas fa-chevron-right text-xs"></i>
                    </a>
                <% } %>
            </nav>
        </div>
        
    </main>

    <!-- Footer -->
    <footer class="bg-indigo-900 text-white mt-12">
        <%-include("../../views/partials/user/footer")-%>
    </footer>

   
    <div class="fixed bottom-4 left-4 z-50">
        <div class="bg-green-600 text-white rounded-lg p-2 shadow-lg">
            <button class="flex items-center space-x-2">
                <i class="fas fa-envelope"></i>
                <span class="text-sm font-medium">Email subscription</span>
            </button>
        </div>
    </div>


    <script>
        const filterForm=document.getElementById('filterForm');
        document.getElementById('sortSelect').addEventListener('change',()=>{
            filterForm.submit();
        })
        document.getElementById('categorySelect').addEventListener('change',()=>{
            filterForm.submit()
        })


        
        const sortSelect = document.getElementById('sortSelect');

        sortSelect.addEventListener('change', async function () {  
            const selectedValue = sortSelect.value;

            try {
                const response = await fetch(`/products-user?sort=${selectedValue}&format=json`, {
                    method: 'GET'   
                });

                if (response.ok) {   
                    try {
                        const data = await response.json();
                        if (data.status === 'success' && data.products) {                          
                            const productContainer = document.querySelector('.grid.grid-cols-2.md\\:grid-cols-3.lg\\:grid-cols-4.gap-4');                         
                            productContainer.innerHTML = '';

                            data.products.forEach(product => {
                                const productCard = document.createElement('div');
                                productCard.className = 'bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all';
                                productCard.innerHTML = `
                            <a href="#">
                                <img onclick="window.location.href = '/productdetails/${product._id}'" 
                                    src="${product.productImage[0]}" 
                                    alt="Product" 
                                    class="w-full h-40 object-cover">
                                <div class="p-4">
                                    <div class="flex items-center mb-2">
                                        <div class="flex text-yellow-400">
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                        </div>
                                        <span class="text-xs text-gray-500 ml-1">(5)</span>
                                    </div>
                                    <h3 class="font-medium text-sm mb-1 truncate">${product.productName}</h3>
                                    <p class="text-gray-900 font-bold text-sm">${product.price}</p>
                                    <button class="mt-2 w-full text-center bg-gray-200 rounded-full p-1">
                                        <i class="fas fa-shopping-cart text-xs"></i>
                                    </button>
                                </div>
                            </a>
                        `;
                                productContainer.appendChild(productCard);
                            });
                        } else {
                            console.error('Invalid data format from server');
                        }
                    } catch (parseError) {
                       
                        console.error('Error parsing response as JSON:', parseError);
                       
                        window.location.href = `/products-user?sort=${selectedValue}`;
                    }
                } else {
                    console.error('Error with sorting request:', response.status);
                    
                    window.location.href = `/products-user?sort=${selectedValue}`;
                }
            } catch (error) {
                console.error('Fetch error:', error);
                
                window.location.href = `/products-user?sort=${selectedValue}`;
            }
        });

        const categorySelect = document.getElementById('categorySelect');

// When category changes, trigger fetch like sorting
categorySelect.addEventListener('change', async function () {
  const selectedCategory = categorySelect.value;
  const selectedSort = sortSelect.value;

  try {
    const response = await fetch(`/products-user?category=${selectedCategory}&sort=${selectedSort}&format=json`);
    if (response.ok) {
      const data = await response.json();
      if (data.status === 'success' && data.products) {
        const productContainer = document.querySelector('.grid.grid-cols-2.md\\:grid-cols-3.lg\\:grid-cols-4.gap-4');
        productContainer.innerHTML = '';

        data.products.forEach(product => {
          const productCard = document.createElement('div');
          productCard.className = 'bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all';
          productCard.innerHTML = `
            <a href="#">
              <img onclick="window.location.href = '/productdetails/${product._id}'"
                   src="${product.productImage[0]}"
                   alt="Product"
                   class="w-full h-40 object-cover">
              <div class="p-4">
                <div class="flex items-center mb-2">
                  <div class="flex text-yellow-400">
                    <i class="fas fa-star text-xs"></i>
                    <i class="fas fa-star text-xs"></i>
                    <i class="fas fa-star text-xs"></i>
                    <i class="fas fa-star text-xs"></i>
                    <i class="fas fa-star text-xs"></i>
                  </div>
                  <span class="text-xs text-gray-500 ml-1">(5)</span>
                </div>
                <h3 class="font-medium text-sm mb-1 truncate">${product.productName}</h3>
                <p class="text-gray-900 font-bold text-sm">${product.price}</p>
                <button class="mt-2 w-full text-center bg-gray-200 rounded-full p-1">
                  <i class="fas fa-shopping-cart text-xs"></i>
                </button>
              </div>
            </a>
          `;
          productContainer.appendChild(productCard);
        });
      }
    } else {
      window.location.href = `/products-user?category=${selectedCategory}&sort=${selectedSort}`;
    }
  } catch (error) {
    console.error('Category fetch error:', error);
    window.location.href = `/products-user?category=${selectedCategory}&sort=${selectedSort}`;
  }
});


    </script>
</body>

</html>