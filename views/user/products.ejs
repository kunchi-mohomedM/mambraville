<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-commerce Product Listing</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-100">
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <%-include("../../views/partials/user/header")-%>
    </header>

    
    <div class="bg-white py-4 px-4 rounded-xl shadow-md mb-6 mt-4 mx-4">
        <form id="filterForm" action="/products-user" method="GET"
            class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">

            <!--  Search -->
            <div class="relative w-full md:w-1/3">
                <input type="text" id="searchInput" name="search" value="<%= queryParams.search || '' %>"
                    placeholder="Search products..."
                    class="w-full border rounded-full py-2 pl-10 pr-4 focus:outline-none focus:ring-2 focus:ring-purple-500 text-gray-700">
                <i class="fa fa-search absolute left-3 top-2.5 text-gray-400"></i>
            </div>

            <!--  Category -->
            <div class="flex items-center space-x-2">
                <label for="categorySelect" class="text-sm text-gray-600 font-medium">Category:</label>

                <select id="categorySelect" name="category"
                    class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-500 text-gray-700">

                    <option value="">All</option>

                    <% categories.forEach(cat=> { %>
                        <option value="<%= cat.categoryname %>" <%=queryParams.category===cat.categoryname ? 'selected'
                            : '' %>>
                            <%= cat.categoryname %>
                        </option>
                        <% }) %>

                </select>
            </div>


            <!-- Sort -->
            <div class="flex items-center space-x-2">
                <label for="sortSelect" class="text-sm text-gray-600 font-medium">Sort:</label>
                <select id="sortSelect" name="sort"
                    class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-purple-500 text-gray-700">
                    <option value="">Default</option>
                    <option value="priceasc" <%=queryParams.sort==='priceasc' ? 'selected' : '' %>>Price: Low to High
                    </option>
                    <option value="pricedesc" <%=queryParams.sort==='pricedesc' ? 'selected' : '' %>>Price: High to Low
                    </option>
                    <option value="newest" <%=queryParams.sort==='newest' ? 'selected' : '' %>>Newest</option>
                    <option value="oldest" <%=queryParams.sort==='oldest' ? 'selected' : '' %>>Oldest</option>
                    <option value="popular" <%=queryParams.sort==='popular' ? 'selected' : '' %>>Popular</option>
                </select>
            </div>

            <!-- Apply Button -->
            <button type="submit" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition">
                Apply
            </button>

        </form>
    </div>



    </div>
    <!-- Breadcrumb -->
    <div class="container mx-auto mt-4 px-4">
        <nav class="text-sm">
            <ol class="list-none p-0 flex">
                <li class="flex items-center">
                    <a href="#" class="text-gray-600">Home</a>
                    <span class="mx-2 text-gray-500">/</span>
                </li>
                <li class="text-gray-800 font-medium">Products</li>
            </ol>
        </nav>
    </div>



    <!-- Main Content -->
    <main class="container mx-auto mt-4 px-4">

        <!-- Products Grid -->
        <div class="mb-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                <!-- Product 1 -->
                <% products.forEach(product => { %>
<div class="group bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all overflow-hidden border relative">

    <!-- Discount Badge -->
    <% if (product.discountPercent && product.discountPercent > 0) { %>
        <div class="absolute top-3 left-3 z-10">
            <span class="bg-orange-600 text-white text-xs font-bold px-2 py-1 rounded-full shadow">
                <%= product.discountPercent %>% OFF
            </span>
        </div>
    <% } %>

    <!-- Wishlist / Heart Icon -->
    <div class="absolute top-3 right-3 z-10">
        <% if (product.inCart) { %>
            <div class="bg-white/90 p-2 rounded-full shadow-md cursor-not-allowed">
                <i class="fa-solid fa-heart text-gray-300 opacity-60 text-xl"></i>
            </div>
        <% } else { %>
            <a href="/wishlist/toggle/<%= product._id %>"
               class="wishlist-btn bg-white p-2 rounded-full shadow-md hover:shadow-lg 
                      transition-all duration-300 active:scale-90 inline-flex">

                <i class="
                    fa-heart text-xl transition-colors duration-300
                    <%= product.inWishlist 
                        ? 'fa-solid text-red-500'
                        : 'fa-regular text-gray-500 hover:text-red-400'
                    %>
                "></i>
            </a>
        <% } %>
    </div>

    <!-- Product Image -->
    <div class="w-full h-44 bg-gray-50 flex items-center justify-center overflow-hidden">
        <img src="<%= product.productImage[0]?.url %>"
             onclick="window.location.href='/productdetails/<%= product._id %>'"
             class="w-full h-full object-contain p-3 group-hover:scale-105 transition cursor-pointer" />
    </div>

    <!-- Product Details -->
    <div class="p-4">

        <!-- Product Name -->
        <h3 class="font-semibold text-sm text-gray-800 h-10 overflow-hidden leading-tight">
            <%= product.productName %>
        </h3>

        <!-- Price Section -->
        <div class="flex gap-2 items-center mt-1">
            <!-- Discounted Price -->
            <p class="text-purple-700 font-bold text-lg">
                ₹<%= product.discountedPrice%>
            </p>

            <% if (product.discountPercent && product.discountPercent > 0) { %>
                <!-- Original Price -->
                <p class="text-gray-500 text-sm mt-1 line-through">
                    ₹<%= product.originalPrice %>
                </p>
            <% } %>
        </div>

        <!-- Rating (Static for now) -->
        <div class="flex items-center gap-1 mt-1">
            <i class="fas fa-star text-yellow-400 text-xs"></i>
            <span class="text-gray-500 text-xs">(5)</span>
        </div>

        <!-- Add to Cart Button -->
        <button
            class="toggle-cart-btn mt-3 w-full text-center rounded-full py-2 font-medium text-white
                   transition
                   <%= product.inCart ? 'bg-green-600 hover:bg-green-700' : 'bg-purple-600 hover:bg-purple-700' %>"
            data-product-id="<%= product._id %>"
            data-in-cart="<%= product.inCart %>">

            <i class="fas fa-shopping-cart text-xs mr-1"></i>
            <span><%= product.inCart ? 'Go to Cart' : 'Add to Cart' %></span>
        </button>

    </div>
</div>

<% }) %>

                
            </div>
        </div>

        <!-- Pagination -->
        <div class="flex justify-center items-center my-6">
            <nav class="flex items-center space-x-1">
                <% if (currentPage> 1) { %>
                    <a href="?<%= new URLSearchParams({ ...queryParams, page: currentPage - 1 }).toString() %>"
                        class="px-3 py-1 rounded border border-gray-300 text-sm">
                        <i class="fas fa-chevron-left text-xs"></i>
                    </a>
                    <% } %>

                        <% for (let i=1; i <=totalPages; i++) { %>
                            <a href="?<%= new URLSearchParams({ ...queryParams, page: i }).toString() %>"
                                class="px-3 py-1 rounded border border-gray-300 text-sm <%= i === currentPage ? 'bg-blue-600 text-white' : '' %>">
                                <%= i %>
                            </a>
                            <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <a href="?<%= new URLSearchParams({ ...queryParams, page: currentPage + 1 }).toString() %>"
                                        class="px-3 py-1 rounded border border-gray-300 text-sm">
                                        <i class="fas fa-chevron-right text-xs"></i>
                                    </a>
                                    <% } %>
            </nav>
        </div>

    </main>

    <!-- Footer -->
    <footer class="bg-indigo-900 text-white mt-12">
        <%-include("../../views/partials/user/footer")-%>
    </footer>


    
    <script>
        const filterForm = document.getElementById('filterForm');
        document.getElementById('sortSelect').addEventListener('change', () => {
            filterForm.submit();
        })
        document.getElementById('categorySelect').addEventListener('change', () => {
            filterForm.submit()
        })



        const sortSelect = document.getElementById('sortSelect');

        sortSelect.addEventListener('change', async function () {
            const selectedValue = sortSelect.value;

            try {
                const response = await fetch(`/products-user?sort=${selectedValue}&format=json`, {
                    method: 'GET'
                });

                if (response.ok) {
                    try {
                        const data = await response.json();
                        if (data.status === 'success' && data.products) {
                            const productContainer = document.querySelector('.grid.grid-cols-2.md\\:grid-cols-3.lg\\:grid-cols-4.gap-4');
                            productContainer.innerHTML = '';

                            data.products.forEach(product => {
                                const productCard = document.createElement('div');
                                productCard.className = 'bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all';
                                productCard.innerHTML = `
                            <a href="#">
                                <img onclick="window.location.href = '/productdetails/${product._id}'" 
                                    src="${product.productImage[0]}" 
                                    alt="Product" 
                                    class="w-full h-40 object-cover">
                                <div class="p-4">
                                    <div class="flex items-center mb-2">
                                        <div class="flex text-yellow-400">
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                            <i class="fas fa-star text-xs"></i>
                                        </div>
                                        <span class="text-xs text-gray-500 ml-1">(5)</span>
                                    </div>
                                    <h3 class="font-medium text-sm mb-1 truncate">${product.productName}</h3>
                                    <p class="text-gray-900 font-bold text-sm">${product.price}</p>
                                    <button class="mt-2 w-full text-center bg-gray-200 rounded-full p-1">
                                        <i class="fas fa-shopping-cart text-xs"></i>
                                    </button>
                                </div>
                            </a>
                        `;
                                productContainer.appendChild(productCard);
                            });
                        } else {
                            console.error('Invalid data format from server');
                        }
                    } catch (parseError) {

                        console.error('Error parsing response as JSON:', parseError);

                        window.location.href = `/products-user?sort=${selectedValue}`;
                    }
                } else {
                    console.error('Error with sorting request:', response.status);

                    window.location.href = `/products-user?sort=${selectedValue}`;
                }
            } catch (error) {
                console.error('Fetch error:', error);

                window.location.href = `/products-user?sort=${selectedValue}`;
            }
        });

        const categorySelect = document.getElementById('categorySelect');

        // When category changes, trigger fetch like sorting
        categorySelect.addEventListener('change', async function () {
            const selectedCategory = categorySelect.value;
            const selectedSort = sortSelect.value;

            try {
                const response = await fetch(`/products-user?category=${selectedCategory}&sort=${selectedSort}&format=json`);
                if (response.ok) {
                    const data = await response.json();
                    if (data.status === 'success' && data.products) {
                        const productContainer = document.querySelector('.grid.grid-cols-2.md\\:grid-cols-3.lg\\:grid-cols-4.gap-4');
                        productContainer.innerHTML = '';

                        data.products.forEach(product => {
                            const productCard = document.createElement('div');
                            productCard.className = 'bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all';
                            productCard.innerHTML = `
            <a href="#">
              <img onclick="window.location.href = '/productdetails/${product._id}'"
                   src="${product.productImage[0]}"
                   alt="Product"
                   class="w-full h-40 object-cover">
              <div class="p-4">
                <div class="flex items-center mb-2">
                  <div class="flex text-yellow-400">
                    <i class="fas fa-star text-xs"></i>
                    <i class="fas fa-star text-xs"></i>
                    <i class="fas fa-star text-xs"></i>
                    <i class="fas fa-star text-xs"></i>
                    <i class="fas fa-star text-xs"></i>
                  </div>
                  <span class="text-xs text-gray-500 ml-1">(5)</span>
                </div>
                <h3 class="font-medium text-sm mb-1 truncate">${product.productName}</h3>
                <p class="text-gray-900 font-bold text-sm">${product.price}</p>
                <button class="mt-2 w-full text-center bg-gray-200 rounded-full p-1">
                  <i class="fas fa-shopping-cart text-xs"></i>
                </button>
              </div>
            </a>
          `;
                            productContainer.appendChild(productCard);
                        });
                    }
                } else {
                    window.location.href = `/products-user?category=${selectedCategory}&sort=${selectedSort}`;
                }
            } catch (error) {
                console.error('Category fetch error:', error);
                window.location.href = `/products-user?category=${selectedCategory}&sort=${selectedSort}`;
            }
        });


        //toggle


        const isLoggedIn = ' <%= isLoggedIn ? "true" : "false" %>';

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".toggle-cart-btn").forEach(button => {
                button.addEventListener("click", async () => {
                    if (isLoggedIn === "false") {
                        window.location.href = "/login";
                        return;
                    }

                    const productId = button.dataset.productId;
                    const isInCart = button.dataset.inCart === "true";

                    if (isInCart) {
                        window.location.href = "/cart";
                        return;
                    }

                    try {
                        const response = await fetch(`/add-to-cart/${productId}`, { method: "GET" });
                        if (response.ok) {
                            button.dataset.inCart = "true";
                            button.classList.remove("bg-purple-600");
                            button.classList.add("bg-green-600");
                            button.querySelector("span").innerText = "Go to Cart";
                        } else {
                            alert("Failed to add item to cart.");
                        }
                    } catch (error) {
                        console.error(error);
                        alert("Something went wrong.");
                    }
                });
            });
        });


    </script>
</body>

</html>