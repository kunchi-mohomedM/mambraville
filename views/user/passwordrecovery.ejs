<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full overflow-hidden">
        <!-- Header -->
        <div class="text-center p-6 bg-blue-50 border-b border-gray-200">
            <i class="fas fa-lock text-blue-600 text-4xl mb-3"></i>
            <h1 class="text-2xl font-bold text-gray-800">Reset Your Password</h1>
            <p class="text-gray-600 mt-2">Verify your identity to create a new password</p>
        </div>

        <!-- Form Container -->
        <div class="p-6">
            <!-- OTP Section -->
            <div class="mb-8">
                <h2 class="text-lg font-semibold text-gray-700 mb-2">Verification Code</h2>
                <p class="text-gray-600 text-sm mb-4">Enter the 6-digit code sent to your email</p>

                <div class="flex justify-between gap-2 mb-3">
                    <input type="text" maxlength="1"
                        class="otp-input w-12 h-12 text-center text-xl font-bold border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <input type="text" maxlength="1"
                        class="otp-input w-12 h-12 text-center text-xl font-bold border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <input type="text" maxlength="1"
                        class="otp-input w-12 h-12 text-center text-xl font-bold border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <input type="text" maxlength="1"
                        class="otp-input w-12 h-12 text-center text-xl font-bold border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <input type="text" maxlength="1"
                        class="otp-input w-12 h-12 text-center text-xl font-bold border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <input type="text" maxlength="1"
                        class="otp-input w-12 h-12 text-center text-xl font-bold border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div class="text-center">
                    <p class="text-gray-600 text-sm">
                        Didn't receive the code?
                        <a href="#" id="resendLink" class="text-gray-400 font-medium cursor-not-allowed">Resend</a>
                    </p>
                    <p class="text-gray-500 text-sm mt-2">
                        You can resend code in <span id="timer" class="font-medium">03:00</span>
                    </p>
                </div>
            </div>

            <!-- Divider -->
            <div class="relative flex py-3 items-center">
                <div class="flex-grow border-t border-gray-200"></div>
                <span class="flex-shrink mx-4 text-gray-400">Create New Password</span>
                <div class="flex-grow border-t border-gray-200"></div>
            </div>

            <!-- Password Form -->
            <form id="resetPasswordForm" class="mt-6" action="/reset-password" method="post">
                <!-- New Password Field -->
                <div class="mb-5">
                    <label for="newPassword" class="block text-gray-700 text-sm font-medium mb-2">New Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                        <input type="password" id="newPassword" required
                            class="w-full pl-10 pr-10 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                            placeholder="Enter new password">
                        <button type="button" id="togglePassword"
                            class="absolute inset-y-0 right-0 flex items-center pr-3">
                            <i class="fas fa-eye text-gray-400"></i>
                        </button>
                    </div>
                    <div class="mt-2">
                        <div class="password-strength-meter flex gap-1 mb-1">
                            <div class="h-1 flex-1 rounded-full bg-gray-200"></div>
                            <div class="h-1 flex-1 rounded-full bg-gray-200"></div>
                            <div class="h-1 flex-1 rounded-full bg-gray-200"></div>
                            <div class="h-1 flex-1 rounded-full bg-gray-200"></div>
                        </div>
                        <p class="text-xs text-gray-500">Use 8+ characters with letters, numbers & symbols</p>
                    </div>
                </div>

                <!-- Confirm Password Field -->
                <div class="mb-6">
                    <label for="confirmPassword" class="block text-gray-700 text-sm font-medium mb-2">Confirm
                        Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                        <input type="password" id="confirmPassword" required
                            class="w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                            placeholder="Confirm new password">
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" id="submitButton"
                    class="w-full bg-blue-600 text-white py-3 rounded-lg font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                    Reset Password
                </button>
            </form>
        </div>
    </div>

    <script>
        const userEmail = '<%=email %>';

        // Timer variables
        let timerInterval = null;
        let timerSeconds = 180; // 3 minutes timer
        let resendRequestInProgress = false;

        // Helper function to show SweetAlert error/info
        function showAlert(icon, title, text, timer = null) {
            return Swal.fire({
                icon: icon,
                title: title,
                text: text,
                timer: timer,
                timerProgressBar: timer ? true : false,
                showConfirmButton: !timer
            });
        }

        // Format time as MM:SS
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = seconds % 60;
            return `${mins < 10 ? "0" : ""}${mins}:${secs < 10 ? "0" : ""}${secs}`;
        }

        // Start or restart the timer
        function startTimer() {
            timerSeconds = 180; // Reset to 3 minutes
            const timerDisplay = document.getElementById("timer");
            const resendLink = document.getElementById("resendLink");

            timerDisplay.textContent = formatTime(timerSeconds);

            // Disable resend link
            resendLink.classList.remove("text-blue-600", "hover:text-blue-800");
            resendLink.classList.add("text-gray-400", "cursor-not-allowed");
            resendLink.onclick = (e) => { e.preventDefault(); return false; };

            // Clear any existing interval
            if (timerInterval) {
                clearInterval(timerInterval);
                timerInterval = null;
            }

            // Start countdown
            timerInterval = setInterval(function () {
                timerSeconds--;
                timerDisplay.textContent = formatTime(timerSeconds);

                if (timerSeconds <= 0) {
                    clearInterval(timerInterval);
                    timerInterval = null;

                    // Enable resend button
                    resendLink.classList.remove("text-gray-400", "cursor-not-allowed");
                    resendLink.classList.add("text-blue-600", "hover:text-blue-800");
                    resendLink.onclick = (e) => {
                        e.preventDefault();
                        if (!resendRequestInProgress) {
                            resendOTP();
                        }
                        return false;
                    };
                }
            }, 1000);
        }

        // Resend OTP function
        async function resendOTP() {
            if (resendRequestInProgress) return;

            resendRequestInProgress = true;

            try {
                const response = await fetch("/resend-otp", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ email: userEmail }) // Pass userEmail to resend-otp endpoint
                });

                const data = await response.json();
                resendRequestInProgress = false;

                if (data.success) {
                    startTimer(); // Restart timer
                    await showAlert('success', 'OTP Resent', 'A new verification code has been sent to your email.', 1500);
                } else {
                    await showAlert('error', 'Error', data.message || 'Failed to resend OTP. Please try again.');
                }
            } catch (error) {
                resendRequestInProgress = false;
                await showAlert('error', 'Network Error', 'Please check your connection and try again.');
                console.error('Resend OTP error:', error);
            }
        }

        // OTP Input handling - Auto tab between fields
        document.querySelectorAll('.otp-input').forEach((input, index) => {
            input.addEventListener('input', function (e) {
                this.value = this.value.replace(/\D/g, '');
                if (this.value && index < document.querySelectorAll('.otp-input').length - 1) {
                    document.querySelectorAll('.otp-input')[index + 1].focus();
                }
            });

            input.addEventListener('keydown', function (e) {
                if (e.key === 'Backspace' && !this.value && index > 0) {
                    document.querySelectorAll('.otp-input')[index - 1].focus();
                }
            });
        });

        // Toggle password visibility
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordField = document.getElementById('newPassword');
            const type = passwordField.type === 'password' ? 'text' : 'password';
            passwordField.type = type;
            this.querySelector('i').classList.toggle('fa-eye');
            this.querySelector('i').classList.toggle('fa-eye-slash');
        });

        // Password strength meter
        document.getElementById('newPassword').addEventListener('input', function () {
            const password = this.value;
            const strengthBars = document.querySelectorAll('.password-strength-meter div');
            let strength = 0;

            strengthBars.forEach(bar => {
                bar.classList.remove('bg-red-500', 'bg-orange-500', 'bg-yellow-500', 'bg-green-500');
                bar.classList.add('bg-gray-200');
            });

            if (password.length >= 8) strength++;
            if (password.match(/[A-Z]/)) strength++;
            if (password.match(/[0-9]/)) strength++;
            if (password.match(/[^A-Za-z0-9]/)) strength++;

            for (let i = 0; i < strength; i++) {
                if (strength === 1) strengthBars[i].classList.add('bg-red-500');
                else if (strength === 2) strengthBars[i].classList.add('bg-orange-500');
                else if (strength === 3) strengthBars[i].classList.add('bg-yellow-500');
                else if (strength === 4) strengthBars[i].classList.add('bg-green-500');
            }
        });

        // Form submission
        document.getElementById('resetPasswordForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            let otp = '';
            document.querySelectorAll('.otp-input').forEach(input => {
                otp += input.value;
            });

            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            // Validation checks with SweetAlert
            if (otp.length !== 6) {
                await showAlert('warning', 'Incomplete OTP', 'Please enter the complete 6-digit verification code');
                return;
            }

            if (newPassword.length < 8) {
                await showAlert('warning', 'Password Too Short', 'Password must be at least 8 characters long');
                return;
            }

            if (newPassword !== confirmPassword) {
                await showAlert('error', 'Passwords Don\'t Match', 'The passwords you entered do not match. Please try again.');
                return;
            }

            // Loading state
            const submitButton = document.getElementById('submitButton');
            submitButton.disabled = true;
            submitButton.innerHTML = `
                <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white inline-block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Resetting...
            `;

            try {
                const response = await fetch('/reset-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ otp, newPassword, userEmail })
                });

                const data = await response.json();

                if (data.success) {
                    await Swal.fire({
                        icon: 'success',
                        title: 'Password Changed!',
                        text: 'Your password has been successfully updated.',
                        timer: 2500,
                        showConfirmButton: false
                    });
                    window.location.href = '/login';
                } else {
                    await showAlert('error', 'Reset Failed', data.message || 'Error changing password. Please try again.');
                }
            } catch (error) {
                await showAlert('error', 'Connection Error', 'Something went wrong while resetting your password. Please check your internet and try again.');
                console.error('Reset password error:', error);
            } finally {
                // Reset button state
                submitButton.disabled = false;
                submitButton.innerHTML = 'Reset Password';
            }
        });

        // Initialize timer on page load
        document.addEventListener('DOMContentLoaded', function () {
            startTimer();
        });
    </script>
</body>

</html>