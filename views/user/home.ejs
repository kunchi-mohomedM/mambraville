<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-commerce Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.5.2/flowbite.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Custom responsive utilities */
        @media (max-width: 374px) {
            .xs-text-xs { font-size: 0.7rem; }
            .xs-text-sm { font-size: 0.75rem; }
        }
        
        /* Smooth transitions */
        * {
            -webkit-tap-highlight-color: transparent;
        }
        
        /* Better touch targets for mobile */
        @media (max-width: 640px) {
            button, a {
                min-height: 44px;
                min-width: 44px;
            }
        }
    </style>
</head>

<body class="bg-gray-50 antialiased">

    <header class="bg-white shadow-sm sticky top-0 z-50">
        <%- include("../../views/partials/user/header") -%>
    </header>

    <main class="container mx-auto px-3 sm:px-4 md:px-6 lg:px-8 py-4 sm:py-6 lg:py-10 max-w-7xl">

        <!-- Hero Carousel -->
        <div id="default-carousel" class="relative w-full mb-6 sm:mb-8 lg:mb-10 rounded-lg sm:rounded-xl lg:rounded-2xl overflow-hidden shadow-md sm:shadow-lg"
            data-carousel="slide" data-carousel-interval="5000">
            <div class="relative aspect-[16/10] sm:aspect-[16/9] md:aspect-[21/10] lg:aspect-[21/9] overflow-hidden">
                <!-- Slide 1 -->
                <div class="hidden duration-700 ease-in-out" data-carousel-item="active">
                    <img src="/images/pngtree-innovative-3d-mobile-mockup-paired-with-web-development-banner-and-laptop-picture-image_5592791.jpg"
                        class="absolute inset-0 w-full h-full object-cover" alt="Banner 1">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent flex items-end pb-4 sm:pb-6 lg:pb-10 px-4 sm:px-6 lg:px-8">
                        <div class="text-white max-w-xs sm:max-w-md lg:max-w-lg">
                            <h2 class="text-xl sm:text-3xl md:text-4xl lg:text-5xl font-bold drop-shadow-lg leading-tight">
                                New Season Arrivals
                            </h2>
                            <p class="mt-1 sm:mt-2 text-sm sm:text-base lg:text-lg drop-shadow-md">
                                Discover the latest trends now
                            </p>
                        </div>
                    </div>
                </div>
                <!-- Slide 2 -->
                <div class="hidden duration-700 ease-in-out" data-carousel-item>
                    <img src="/images/f3832e180145769.6505ae76214ca.jpg"
                        class="absolute inset-0 w-full h-full object-cover" alt="Banner 2">
                </div>
                <!-- Slide 3 -->
                <div class="hidden duration-700 ease-in-out" data-carousel-item>
                    <img src="/images/banner_new1-min.jpg" 
                        class="absolute inset-0 w-full h-full object-cover" alt="Banner 3">
                </div>
            </div>

            <!-- Indicators -->
            <div class="absolute z-30 flex -translate-x-1/2 bottom-3 sm:bottom-4 lg:bottom-6 left-1/2 space-x-2 sm:space-x-3">
                <button type="button"
                    class="w-2 h-2 sm:w-3 sm:h-3 lg:w-3.5 lg:h-3.5 rounded-full bg-white/70 hover:bg-white focus:bg-white transition"
                    data-carousel-slide-to="0" aria-current="true"></button>
                <button type="button"
                    class="w-2 h-2 sm:w-3 sm:h-3 lg:w-3.5 lg:h-3.5 rounded-full bg-white/70 hover:bg-white focus:bg-white transition"
                    data-carousel-slide-to="1"></button>
                <button type="button"
                    class="w-2 h-2 sm:w-3 sm:h-3 lg:w-3.5 lg:h-3.5 rounded-full bg-white/70 hover:bg-white focus:bg-white transition"
                    data-carousel-slide-to="2"></button>
            </div>

            <!-- Previous Button -->
            <button type="button"
                class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-2 sm:px-3 lg:px-4 cursor-pointer group focus:outline-none"
                data-carousel-prev>
                <span class="inline-flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12 rounded-full bg-black/30 group-hover:bg-black/50 transition">
                    <i class="fas fa-chevron-left text-white text-sm sm:text-base lg:text-xl"></i>
                </span>
            </button>
            <!-- Next Button -->
            <button type="button"
                class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-2 sm:px-3 lg:px-4 cursor-pointer group focus:outline-none"
                data-carousel-next>
                <span class="inline-flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 lg:w-12 lg:h-12 rounded-full bg-black/30 group-hover:bg-black/50 transition">
                    <i class="fas fa-chevron-right text-white text-sm sm:text-base lg:text-xl"></i>
                </span>
            </button>
        </div>

        <!-- Features -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 lg:gap-6 mb-6 sm:mb-10 lg:mb-16">
            <div class="flex flex-col items-center bg-white rounded-lg sm:rounded-xl p-3 sm:p-5 lg:p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="w-10 h-10 sm:w-12 sm:h-12 lg:w-14 lg:h-14 flex items-center justify-center bg-blue-100 rounded-full mb-2 sm:mb-3 lg:mb-4">
                    <i class="fas fa-truck text-blue-600 text-lg sm:text-xl lg:text-2xl"></i>
                </div>
                <h3 class="text-xs sm:text-sm lg:text-base font-medium text-center leading-tight">Free Shipping</h3>
            </div>
            <div class="flex flex-col items-center bg-white rounded-lg sm:rounded-xl p-3 sm:p-5 lg:p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="w-10 h-10 sm:w-12 sm:h-12 lg:w-14 lg:h-14 flex items-center justify-center bg-blue-100 rounded-full mb-2 sm:mb-3 lg:mb-4">
                    <i class="fas fa-undo-alt text-blue-600 text-lg sm:text-xl lg:text-2xl"></i>
                </div>
                <h3 class="text-xs sm:text-sm lg:text-base font-medium text-center leading-tight">Money-back Guarantee</h3>
            </div>
            <div class="flex flex-col items-center bg-white rounded-lg sm:rounded-xl p-3 sm:p-5 lg:p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="w-10 h-10 sm:w-12 sm:h-12 lg:w-14 lg:h-14 flex items-center justify-center bg-blue-100 rounded-full mb-2 sm:mb-3 lg:mb-4">
                    <i class="fas fa-headset text-blue-600 text-lg sm:text-xl lg:text-2xl"></i>
                </div>
                <h3 class="text-xs sm:text-sm lg:text-base font-medium text-center leading-tight">24/7 Support</h3>
            </div>
            <div class="flex flex-col items-center bg-white rounded-lg sm:rounded-xl p-3 sm:p-5 lg:p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="w-10 h-10 sm:w-12 sm:h-12 lg:w-14 lg:h-14 flex items-center justify-center bg-blue-100 rounded-full mb-2 sm:mb-3 lg:mb-4">
                    <i class="fas fa-shield-alt text-blue-600 text-lg sm:text-xl lg:text-2xl"></i>
                </div>
                <h3 class="text-xs sm:text-sm lg:text-base font-medium text-center leading-tight">Secure Payment</h3>
            </div>
        </div>

        <!-- New Arrivals -->
        <section class="mb-6 sm:mb-10 lg:mb-16">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 sm:mb-5 lg:mb-6 gap-2 sm:gap-3">
                <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900">New Arrivals</h2>
                <a href="/products-user"
                    class="text-purple-600 hover:text-purple-800 text-sm sm:text-base font-medium inline-flex items-center gap-1 transition-colors">
                    View all <span class="text-lg">→</span>
                </a>
            </div>
            <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-3 sm:gap-4 lg:gap-5 xl:gap-6">
                <% newArrivals.forEach(product=> { %>
                    <div class="group bg-white rounded-xl sm:rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 relative flex flex-col">

                        <!-- Discount Badge -->
                        <% if (product.discountPercent && product.discountPercent> 0) { %>
                            <div class="absolute top-2 sm:top-3 left-2 sm:left-3 z-10">
                                <span class="bg-orange-600 text-white text-[10px] sm:text-xs font-bold px-1.5 py-0.5 sm:px-2.5 sm:py-1 rounded-full shadow-sm">
                                    <%= product.discountPercent %>% OFF
                                </span>
                            </div>
                        <% } %>

                        <!-- Wishlist -->
                        <div class="absolute top-2 sm:top-3 right-2 sm:right-3 z-10">
                            <% if (product.inCart) { %>
                                <div class="bg-white/90 p-1.5 sm:p-2.5 rounded-full shadow-md cursor-not-allowed">
                                    <i class="fa-solid fa-heart text-gray-300 opacity-60 text-base sm:text-xl"></i>
                                </div>
                            <% } else { %>
                                <a href="/wishlist/toggle/<%= product._id %>"
                                    class="wishlist-btn bg-white p-1.5 sm:p-2.5 rounded-full shadow-md hover:shadow-lg transition-all duration-300 active:scale-95 inline-flex items-center justify-center">
                                    <i class="fa-heart text-base sm:text-xl transition-colors duration-300 <%= product.inWishlist ? 'fa-solid text-red-500' : 'fa-regular text-gray-500 hover:text-red-400' %>"></i>
                                </a>
                            <% } %>
                        </div>

                        <!-- Image -->
                        <div class="relative pt-[100%] bg-gray-50 overflow-hidden">
                            <img src="<%= product.productImage[0]?.url %>"
                                onclick="window.location.href='/productdetails/<%= product._id %>'"
                                class="absolute inset-0 w-full h-full object-contain p-2 sm:p-3 lg:p-4 group-hover:scale-105 transition-transform duration-500 cursor-pointer" 
                                alt="<%= product.productName %>" />
                        </div>

                        <!-- Details -->
                        <div class="p-2.5 sm:p-3 lg:p-4 flex flex-col flex-grow">
                            <h3 class="font-semibold text-xs sm:text-sm lg:text-base text-gray-800 line-clamp-2 min-h-[2rem] sm:min-h-[2.5rem] mb-1">
                                <%= product.productName %>
                            </h3>

                            <div class="flex items-center gap-1.5 sm:gap-2.5 mt-1 mb-1 sm:mb-2">
                                <p class="text-purple-700 font-bold text-base sm:text-lg lg:text-xl">
                                    ₹<%= product.discountedPrice %>
                                </p>
                                <% if (product.discountPercent && product.discountPercent> 0) { %>
                                    <p class="text-gray-500 text-xs sm:text-sm line-through">
                                        ₹<%= product.originalPrice %>
                                    </p>
                                <% } %>
                            </div>

                            <div class="flex items-center gap-1 mb-2 sm:mb-3">
                                <i class="fas fa-star text-yellow-400 text-xs sm:text-sm"></i>
                                <span class="text-gray-500 text-xs">5</span>
                            </div>

                            <button class="toggle-cart-btn mt-auto w-full rounded-full py-2 sm:py-2.5 text-xs sm:text-sm font-medium text-white transition-all
                                <%= product.inCart 
                                    ? 'bg-green-600 hover:bg-green-700' 
                                    : (product.quantity <= 0 
                                        ? 'bg-red-600 cursor-not-allowed' 
                                        : 'bg-purple-600 hover:bg-purple-700') %>"
                                data-product-id="<%= product._id %>" 
                                data-in-cart="<%= product.inCart %>"
                                <%= product.quantity <= 0 ? 'disabled' : '' %>>
                                <i class="fas fa-shopping-cart text-xs sm:text-sm mr-1 sm:mr-2"></i>
                                <span>
                                    <% if (product.inCart) { %>Go to Cart
                                    <% } else if (product.quantity <= 0) { %>Out of Stock
                                    <% } else { %>Add to Cart<% } %>
                                </span>
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>

        <!-- Trending Products -->
        <section class="mb-6 sm:mb-10 lg:mb-16">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 sm:mb-5 lg:mb-6 gap-2 sm:gap-3">
                <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900">Trending Products</h2>
                <a href="/products-user"
                    class="text-purple-600 hover:text-purple-800 text-sm sm:text-base font-medium inline-flex items-center gap-1 transition-colors">
                    View all <span class="text-lg">→</span>
                </a>
            </div>
            <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-3 sm:gap-4 lg:gap-5 xl:gap-6">
                <% trendingProducts.forEach(product=> { %>
                    <div class="group bg-white rounded-xl sm:rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 relative flex flex-col">
                        
                        <% if (product.discountPercent && product.discountPercent> 0) { %>
                            <div class="absolute top-2 sm:top-3 left-2 sm:left-3 z-10">
                                <span class="bg-orange-600 text-white text-[10px] sm:text-xs font-bold px-1.5 py-0.5 sm:px-2.5 sm:py-1 rounded-full shadow-sm">
                                    <%= product.discountPercent %>% OFF
                                </span>
                            </div>
                        <% } %>

                        <!-- Wishlist / Heart Icon -->
                        <div class="absolute top-2 sm:top-3 right-2 sm:right-3 z-10">
                            <% if (product.inCart) { %>
                                <div class="bg-white/90 p-1.5 sm:p-2.5 rounded-full shadow-md cursor-not-allowed">
                                    <i class="fa-solid fa-heart text-gray-300 opacity-60 text-base sm:text-xl"></i>
                                </div>
                            <% } else { %>
                                <a href="/wishlist/toggle/<%= product._id %>" 
                                    class="wishlist-btn bg-white p-1.5 sm:p-2.5 rounded-full shadow-md hover:shadow-lg transition-all duration-300 active:scale-95 inline-flex items-center justify-center">
                                    <i class="fa-heart text-base sm:text-xl transition-colors duration-300
                                        <%= product.inWishlist ? 'fa-solid text-red-500' : 'fa-regular text-gray-500 hover:text-red-400' %>"></i>
                                </a>
                            <% } %>
                        </div>

                        <!-- Product Image -->
                        <div class="relative pt-[100%] bg-gray-50 overflow-hidden">
                            <img src="<%= product.productImage[0]?.url %>"
                                onclick="window.location.href='/productdetails/<%= product._id %>'"
                                class="absolute inset-0 w-full h-full object-contain p-2 sm:p-3 lg:p-4 group-hover:scale-105 transition-transform duration-500 cursor-pointer" 
                                alt="<%= product.productName %>" />
                        </div>

                        <!-- Product Details -->
                        <div class="p-2.5 sm:p-3 lg:p-4 flex flex-col flex-grow">
                            <h3 class="font-semibold text-xs sm:text-sm lg:text-base text-gray-800 line-clamp-2 min-h-[2rem] sm:min-h-[2.5rem] mb-1">
                                <%= product.productName %>
                            </h3>

                            <div class="flex items-center gap-1.5 sm:gap-2.5 mt-1 mb-1 sm:mb-2">
                                <p class="text-purple-700 font-bold text-base sm:text-lg lg:text-xl">
                                    ₹<%= product.discountedPrice %>
                                </p>
                                <% if (product.discountPercent && product.discountPercent> 0) { %>
                                    <p class="text-gray-500 text-xs sm:text-sm line-through">
                                        ₹<%= product.originalPrice %>
                                    </p>
                                <% } %>
                            </div>

                            <div class="flex items-center gap-1 mb-2 sm:mb-3">
                                <i class="fas fa-star text-yellow-400 text-xs sm:text-sm"></i>
                                <span class="text-gray-500 text-xs">5</span>
                            </div>

                            <button class="toggle-cart-btn mt-auto w-full rounded-full py-2 sm:py-2.5 text-xs sm:text-sm font-medium text-white transition-all
                                <%= product.inCart 
                                    ? 'bg-green-600 hover:bg-green-700' 
                                    : (product.quantity <= 0 
                                        ? 'bg-red-600 cursor-not-allowed' 
                                        : 'bg-purple-600 hover:bg-purple-700') %>" 
                                data-product-id="<%= product._id %>"
                                data-in-cart="<%= product.inCart %>" 
                                <%= product.quantity <= 0 ? 'disabled' : '' %>>
                                <i class="fas fa-shopping-cart text-xs sm:text-sm mr-1 sm:mr-2"></i>
                                <span>
                                    <% if (product.inCart) { %>Go to Cart
                                    <% } else if (product.quantity <= 0) { %>Out of Stock
                                    <% } else { %>Add to Cart<% } %>
                                </span>
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>

        <!-- Weekly Sale Banner -->
        <section class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg sm:rounded-xl lg:rounded-2xl p-4 sm:p-6 lg:p-10 mb-6 sm:mb-10 lg:mb-16 shadow-md">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4 sm:gap-6 lg:gap-8">
                <div class="text-center md:text-left w-full md:w-auto">
                    <h3 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold text-indigo-900 mb-2 sm:mb-3 leading-tight">
                        SEASONAL WEEKLY SALE
                    </h3>
                    <p class="text-sm sm:text-base lg:text-lg text-indigo-700 mb-3 sm:mb-4 lg:mb-6">
                        Get up to 20% off on selected items – Limited time only!
                    </p>
                    <a href="/products-user"
                        class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 sm:py-3 px-6 sm:px-8 rounded-full transition shadow-sm text-sm sm:text-base">
                        Shop Now
                    </a>
                </div>
                <div class="w-full md:w-48 lg:w-64 xl:w-80 hidden sm:block">
                    <img src="https://images.unsplash.com/photo-1555041469-a586c61ea9bc?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
                        alt="Sale promotion" class="rounded-lg sm:rounded-xl shadow-lg object-cover w-full h-48 md:h-auto">
                </div>
            </div>
        </section>

        <!-- Special Offers -->
        <section class="mb-6 sm:mb-10 lg:mb-16">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 sm:mb-5 lg:mb-6 gap-2 sm:gap-3">
                <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900">Special Offers for You</h2>
                <div class="flex space-x-2 sm:space-x-3">
                    <button class="w-6 h-6 sm:w-7 sm:h-7 lg:w-8 lg:h-8 rounded-full bg-red-500 hover:ring-2 ring-red-300 transition"></button>
                    <button class="w-6 h-6 sm:w-7 sm:h-7 lg:w-8 lg:h-8 rounded-full bg-blue-500 hover:ring-2 ring-blue-300 transition"></button>
                    <button class="w-6 h-6 sm:w-7 sm:h-7 lg:w-8 lg:h-8 rounded-full bg-green-500 hover:ring-2 ring-green-300 transition"></button>
                </div>
            </div>
            <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-3 sm:gap-4 lg:gap-5 xl:gap-6">
                <% specialOffers.forEach(product=> { %>
                    <div class="group bg-white rounded-xl sm:rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 relative flex flex-col">
                        
                        <% if (product.discountPercent && product.discountPercent> 0) { %>
                            <div class="absolute top-2 sm:top-3 left-2 sm:left-3 z-10">
                                <span class="bg-orange-600 text-white text-[10px] sm:text-xs font-bold px-1.5 py-0.5 sm:px-2.5 sm:py-1 rounded-full shadow-sm">
                                    <%= product.discountPercent %>% OFF
                                </span>
                            </div>
                        <% } %>

                        <!-- Wishlist / Heart Icon -->
                        <div class="absolute top-2 sm:top-3 right-2 sm:right-3 z-10">
                            <% if (product.inCart) { %>
                                <div class="bg-white/90 p-1.5 sm:p-2.5 rounded-full shadow-md cursor-not-allowed">
                                    <i class="fa-solid fa-heart text-gray-300 opacity-60 text-base sm:text-xl"></i>
                                </div>
                            <% } else { %>
                                <a href="/wishlist/toggle/<%= product._id %>" 
                                    class="wishlist-btn bg-white p-1.5 sm:p-2.5 rounded-full shadow-md hover:shadow-lg transition-all duration-300 active:scale-95 inline-flex items-center justify-center">
                                    <i class="fa-heart text-base sm:text-xl transition-colors duration-300
                                        <%= product.inWishlist ? 'fa-solid text-red-500' : 'fa-regular text-gray-500 hover:text-red-400' %>"></i>
                                </a>
                            <% } %>
                        </div>

                        <!-- Product Image -->
                        <div class="relative pt-[100%] bg-gray-50 overflow-hidden">
                            <img src="<%= product.productImage[0]?.url %>"
                                onclick="window.location.href='/productdetails/<%= product._id %>'"
                                class="absolute inset-0 w-full h-full object-contain p-2 sm:p-3 lg:p-4 group-hover:scale-105 transition-transform duration-500 cursor-pointer" 
                                alt="<%= product.productName %>" />
                        </div>

                        <!-- Product Details -->
                        <div class="p-2.5 sm:p-3 lg:p-4 flex flex-col flex-grow">
                            <h3 class="font-semibold text-xs sm:text-sm lg:text-base text-gray-800 line-clamp-2 min-h-[2rem] sm:min-h-[2.5rem] mb-1">
                                <%= product.productName %>
                            </h3>

                            <div class="flex items-center gap-1.5 sm:gap-2.5 mt-1 mb-1 sm:mb-2">
                                <p class="text-purple-700 font-bold text-base sm:text-lg lg:text-xl">
                                    ₹<%= product.discountedPrice %>
                                </p>
                                <% if (product.discountPercent && product.discountPercent> 0) { %>
                                    <p class="text-gray-500 text-xs sm:text-sm line-through">
                                        ₹<%= product.originalPrice %>
                                    </p>
                                <% } %>
                            </div>

                            <div class="flex items-center gap-1 mb-2 sm:mb-3">
                                <i class="fas fa-star text-yellow-400 text-xs sm:text-sm"></i>
                                <span class="text-gray-500 text-xs">5</span>
                            </div>

                            <button class="toggle-cart-btn mt-auto w-full rounded-full py-2 sm:py-2.5 text-xs sm:text-sm font-medium text-white transition-all
                                <%= product.inCart 
                                    ? 'bg-green-600 hover:bg-green-700' 
                                    : (product.quantity <= 0 
                                        ? 'bg-red-600 cursor-not-allowed' 
                                        : 'bg-purple-600 hover:bg-purple-700') %>" 
                                data-product-id="<%= product._id %>"
                                data-in-cart="<%= product.inCart %>" 
                                <%= product.quantity <= 0 ? 'disabled' : '' %>>
                                <i class="fas fa-shopping-cart text-xs sm:text-sm mr-1 sm:mr-2"></i>
                                <span>
                                    <% if (product.inCart) { %>Go to Cart
                                    <% } else if (product.quantity <= 0) { %>Out of Stock
                                    <% } else { %>Add to Cart<% } %>
                                </span>
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>

    </main>

    <%- include("../../views/partials/user/footer") -%>

    <script>
        const isLoggedIn = '<%= isLoggedIn ? "true" : "false" %>';

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".toggle-cart-btn").forEach(button => {
                button.addEventListener("click", async (e) => {
                    if (button.disabled) return;

                    if (isLoggedIn === "false") {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Login Required',
                            text: 'Please login to add items to your cart',
                            showConfirmButton: true,
                            confirmButtonText: 'Go to Login',
                            confirmButtonColor: '#7c3aed'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = "/login";
                            }
                        });
                        return;
                    }

                    const productId = button.dataset.productId;
                    const isInCart = button.dataset.inCart === "true";

                    if (isInCart) {
                        window.location.href = "/cart";
                        return;
                    }

                    try {
                        const response = await fetch(`/add-to-cart/${productId}`, { method: "GET" });
                        if (response.ok) {
                            button.dataset.inCart = "true";
                            button.classList.remove("bg-purple-600", "hover:bg-purple-700");
                            button.classList.add("bg-green-600", "hover:bg-green-700");
                            button.querySelector("span").textContent = "Go to Cart";
                        } else {
                            button.classList.remove("bg-purple-600", "hover:bg-purple-700");
                            button.classList.add("bg-red-600", "hover:bg-red-700");
                            button.querySelector("span").textContent = "Out of Stock";
                            button.disabled = true;

                            Swal.fire({
                                icon: 'error',
                                title: 'Out of Stock',
                                text: 'This product is currently unavailable.',
                                confirmButtonColor: '#7c3aed'
                            });
                        }
                    } catch (error) {
                        console.error(error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops!',
                            text: 'Something went wrong. Please try again.',
                            confirmButtonColor: '#7c3aed'
                        });
                    }
                });
            });
        });
    </script>
</body>

</html>