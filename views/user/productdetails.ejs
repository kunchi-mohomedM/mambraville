    icon.classList.add('fa-beat'); // nice little animation (font awesome 6+)

    try {
      const response = await fetch(`/wishlist/toggle/${productId}`, {
        method: 'GET',
        headers: { 'Accept': 'application/json' }
      });

      if (!response.ok) throw new Error('Toggle failed');

      // Toggle state
      const nowInWishlist = !isCurrentlyInWishlist;

      // Update data attribute
      wishlistBtn.dataset.inWishlist = nowInWishlist ? 'true' : 'false';

      // Update UI
      if (nowInWishlist) {
        wishlistBtn.classList.add('bg-red-50', 'border-red-400');
        wishlistBtn.classList.remove('bg-white', 'border-gray-300', 'hover:border-red-400');
