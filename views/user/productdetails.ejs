        title: 'Error',
        text: 'Could not update wishlist. Try again.',
        toast: true,
        position: 'top-end',
        timer: 2400
      });
    } finally {
      wishlistBtn.disabled = false;
      icon.classList.remove('fa-beat');
    }
  });
});
