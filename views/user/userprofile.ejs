<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Profile | E-commerce</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  </head>

  <body class="bg-gray-50">
    <header class="bg-white shadow-sm">
      <%-include("../../views/partials/user/header")-%>
    </header>

    <div class="container mx-auto px-4 py-8 max-w-6xl">
      <h1 class="text-3xl font-bold text-gray-900 mb-6">Your Profile</h1>

      <div class="flex flex-col md:flex-row gap-6">
        <!-- Left sidebar -->
        <div class="w-full md:w-1/3 lg:w-1/4">
          <div class="bg-white rounded-lg shadow p-6 mb-6">
            <div class="flex flex-col items-center mb-6">
              <!-- Profile Image -->

              <input
                type="file"
                id="image-input"
                accept="image/*"
                class="hidden"
              />

              <div class="text-center">
                <p class="text-gray-600 mb-1">Hello,</p>
                <h2 class="text-xl font-semibold"><%= user.fullname %></h2>
              </div>
            </div>

            <!-- Image Cropper Modal -->
            <div
              id="crop-modal"
              class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden"
            >
              <div class="bg-white p-4 rounded-lg shadow-lg">
                <h2 class="text-lg font-semibold mb-2">Crop Image</h2>
                <div class="w-60 h-60 overflow-hidden">
                  <img id="crop-image" />
                </div>
                <div class="flex justify-end gap-2 mt-4">
                  <button
                    id="cancel-btn"
                    class="px-3 py-1 bg-gray-500 text-white rounded"
                  >
                    Cancel
                  </button>
                  <button
                    id="crop-btn"
                    class="px-3 py-1 bg-blue-500 text-white rounded"
                  >
                    Crop & Save
                  </button>
                </div>
              </div>
            </div>

            <div class="border-t border-gray-200 pt-4">
              <ul class="space-y-4">
                <li>
                  <a
                    href="/user-Profile"
                    class="flex items-center text-indigo-600 font-medium"
                  >
                    <i class="fas fa-user mr-3 w-5 text-gray-600"></i>
                    <span>Profile Information</span>
                  </a>
                </li>
                <li>
                  <a
                    href="/order-summary"
                    class="flex items-center text-gray-700 hover:text-indigo-600"
                  >
                    <i class="fas fa-shopping-bag mr-3 w-5 text-gray-600"></i>
                    <span>My Orders</span>
                  </a>
                </li>
                <li>
                  <a
                    href="/addressmanagement"
                    class="flex items-center text-gray-700 hover:text-indigo-600"
                  >
                    <i class="fas fa-home mr-3 w-5 text-gray-600"></i>
                    <span>Manage Addresses</span>
                  </a>
                </li>
                <li>
                  <a
                    href="/wallet"
                    class="flex items-center text-gray-700 hover:text-indigo-600"
                  >
                    <i class="fas fa-wallet mr-3 w-5 text-gray-600"></i>
                    <span>My Wallet</span>
                  </a>
                </li>
                <li>
                  <a
                    href="/wishlist"
                    class="flex items-center text-gray-700 hover:text-indigo-600"
                  >
                    <i class="fas fa-heart mr-3 w-5 text-gray-600"></i>
                    <span>My Wishlist</span>
                  </a>
                </li>
                
                <li>
                  <a
                    href="/change-password"
                    class="flex items-center text-gray-700 hover:text-indigo-600"
                  >
                    <i class="fas fa-key mr-3 w-5 text-gray-600"></i>
                    <span>Change Password</span>
                  </a>
                </li>
              </ul>
            </div>

            <div class="border-t border-gray-200 mt-6 pt-4">
              <a
                href="#"
                class="flex items-center text-red-600 hover:text-red-700"
              >
                <i class="fas fa-sign-out-alt mr-3 w-5"></i>
                <span>Log out</span>
              </a>
            </div>
          </div>
        </div>

        <!-- Main content -->
        <div class="w-full md:w-2/3 lg:w-3/4">
          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-2xl font-semibold mb-6">Account data</h2>

            <div class="space-y-6">
              <div class="border-b border-gray-200 pb-4">
                <p class="text-gray-600 mb-1">Full Name</p>

                <!-- Normal view -->
                <div id="name-view" class="flex items-center justify-between">
                  <p class="text-lg" id="current-name"><%= user.fullname %></p>
                  <button
                    onclick="enableEdit()"
                    class="text-gray-500 hover:text-indigo-600"
                  >
                    <i class="fas fa-pencil-alt"></i>
                  </button>
                </div>

                <!-- Edit view -->
                <div id="name-edit" class="hidden">
                  <input
                    type="text"
                    id="edit-name-input"
                    value="<%= user.fullname %>"
                    class="border border-gray-300 rounded px-2 py-1 w-2/3"
                  />

                  <button
                    onclick="saveName()"
                    class="ml-2 px-3 py-1 bg-indigo-600 text-white rounded"
                  >
                    Save
                  </button>

                  <button
                    onclick="cancelEdit()"
                    class="ml-2 px-3 py-1 bg-gray-400 text-white rounded"
                  >
                    Cancel
                  </button>
                </div>
              </div>

              <div class="border-b border-gray-200 pb-4">
                <p class="text-gray-600 mb-1">Email Address</p>
                <p class="text-lg"><%=user.email%></p>
              </div>

              <div class="border-b border-gray-200 pb-4">
                <p class="text-gray-600 mb-1">Joined Date</p>
                <p class="text-lg">
                  <%=user.createdAt.toLocaleDateString('en-IN')%>
                </p>
              </div>

              <div class="bg-white p-4 rounded shadow mt-4">
                <h3 class="text-lg font-semibold">Referral Program</h3>

                <p class="mt-2">
                  <strong>Your Referral Code:</strong>
                  <span class="text-green-600 font-bold">
                    <%=referralCode %>
                  </span>
                </p>

                <p class="mt-2">
                  <strong>Users Referred:</strong>
                  <%= referredCount %>
                </p>

                <p class="mt-2">
                  <strong>Wallet Balance:</strong>
                  â‚¹<%= wallet?.balance || 0 %>
                </p>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
    <%-include("../../views/partials/user/footer")-%>
    <script>
      function enableEdit() {
        document.getElementById("name-view").classList.add("hidden");
        document.getElementById("name-edit").classList.remove("hidden");
      }

      function cancelEdit() {
        document.getElementById("name-view").classList.remove("hidden");
        document.getElementById("name-edit").classList.add("hidden");
      }

      async function saveName() {
        const newName = document.getElementById("edit-name-input").value.trim();

        if (newName.length < 3) {
          Swal.fire({
            icon: 'warning',
            title: 'Oops...',
            text: 'Name must be at least 3 characters long.',
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000
          });
          return;
        }

        try {
          const response = await fetch("/update-username", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ fullname: newName }),
          });

          const result = await response.json();

          if (result.success) {
            document.getElementById("current-name").innerText = newName;
            cancelEdit();

            Swal.fire({
              icon: 'success',
              title: 'Updated!',
              text: 'Your name has been updated successfully.',
              toast: true,
              position: 'top-end',
              showConfirmButton: false,
              timer: 2500
            });
          } else {
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: result.message || 'Something went wrong. Please try again.',
              toast: true,
              position: 'top-end',
              timer: 3500
            });
          }
        } catch (err) {
          Swal.fire({
            icon: 'error',
            title: 'Network Error',
            text: 'Could not connect to the server. Please check your internet.',
            toast: true,
            position: 'top-end',
            timer: 4000
          });
        }
      }
    </script>
  </body>

  
</html>
