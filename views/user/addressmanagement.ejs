    </div>
  </div>

  <!-- Buttons -->
  <div class="flex space-x-4 pt-4">
    <button
      type="submit"
      class="w-full bg-purple-600 text-white py-3 rounded-lg hover:bg-purple-700 font-medium transition"
    >
      Save Address
    </button>
    <button
      type="button"
      id="cancelAddressForm"
      class="w-full border border-gray-400 text-gray-700 py-3 rounded-lg hover:bg-gray-50 transition"
    >
      Cancel
    </button>
  </div>
</form>
