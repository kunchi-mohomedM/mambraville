<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Profile | E-commerce</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">


 <header class="bg-white shadow-sm">
        <%-include("../../views/partials/user/header")-%>
    </header>

    <div class="container mx-auto px-4 py-8 max-w-6xl">
        <h1 class="text-3xl font-bold text-gray-900 mb-6">Your Profile</h1>
        
        <div class="flex flex-col md:flex-row gap-6">
            <!-- Left sidebar -->
            <div class="w-full md:w-1/3 lg:w-1/4">
                <div class="bg-white rounded-lg shadow p-6 mb-6">
                    <div class="flex flex-col items-center mb-6">
                        <!-- Profile Image -->
                    
                        <input type="file" id="image-input" accept="image/*" class="hidden">
                    
        
                    </div>
                    
                    <!-- Image Cropper Modal -->
                    <div id="crop-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
                        <div class="bg-white p-4 rounded-lg shadow-lg">
                            <h2 class="text-lg font-semibold mb-2">Crop Image</h2>
                            <div class="w-60 h-60 overflow-hidden">
                                <img id="crop-image">
                            </div>
                            <div class="flex justify-end gap-2 mt-4">
                                <button id="cancel-btn" class="px-3 py-1 bg-gray-500 text-white rounded">Cancel</button>
                                <button id="crop-btn" class="px-3 py-1 bg-blue-500 text-white rounded">Crop & Save</button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="border-t border-gray-200 pt-4">
                        <ul class="space-y-4">
                            <li>
                                <a href="/user-Profile" class="flex items-center text-indigo-600 font-medium">
                                    <i class="fas fa-user mr-3 w-5 text-gray-600"></i>
                                    <span>Profile Information</span>
                                </a>
                            </li>
                            <li>
                                <a href="/order-summary" class="flex items-center text-gray-700 hover:text-indigo-600">
                                    <i class="fas fa-shopping-bag mr-3 w-5 text-gray-600"></i>
                                    <span>My Orders</span>
                                </a>
                            </li>
                            <li>
                                <a href="/addressmanagement" class="flex items-center text-gray-700 hover:text-indigo-600">
                                    <i class="fas fa-home mr-3 w-5 text-gray-600"></i>
                                    <span>Manage Addresses</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="flex items-center text-gray-700 hover:text-indigo-600">
                                    <i class="fas fa-wallet mr-3 w-5 text-gray-600"></i>
                                    <span>My Wallet</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="flex items-center text-gray-700 hover:text-indigo-600">
                                    <i class="fas fa-heart mr-3 w-5 text-gray-600"></i>
                                    <span>My Wishlist</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="flex items-center text-gray-700 hover:text-indigo-600">
                                    <i class="fas fa-user-friends mr-3 w-5 text-gray-600"></i>
                                    <span>Refer Friends</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="flex items-center text-gray-700 hover:text-indigo-600">
                                    <i class="fas fa-key mr-3 w-5 text-gray-600"></i>
                                    <span>Change Password</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    
                    <div class="border-t border-gray-200 mt-6 pt-4">
                        <a href="/logout" class="flex items-center text-red-600 hover:text-red-700">
                            <i class="fas fa-sign-out-alt mr-3 w-5"></i>
                            <span>Log out</span>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Main content -->
            <div class=" bg-white shadow-md rounded-lg p-6 w-full md:w-2/3 lg:w-3/4">
                <h2 class="text-2xl font-bold mb-4 text-center">Saved Addresses</h2>
                
                <div id="addressList" class="mb-4">
    <% if(addressList && addressList.length > 0){ %>
        <div class="grid grid-cols-1 gap-4">
            <% addressList.forEach(a => { %>
                <div class="border rounded-lg p-4 shadow relative">

                    <!-- Default badge -->
                    <% if(a.isDefault){ %>
                        <span class="absolute top-2 right-2 text-xs bg-green-500 text-white px-2 py-1 rounded">Default</span>
                    <% } %>

                    <p class="text-lg font-semibold"><%= a.fullname %></p>
                    <p><%= a.house %>, <%= a.street %></p>
                    <p><%= a.city %>, <%= a.state %> - <%= a.pincode %></p>
                    <p>Phone: <%= a.phone %></p>

                    <!-- Buttons -->
                    <div class="flex gap-3 mt-3">
                        <% if(!a.isDefault){ %>
                            <a href="/set-default-address/<%= a._id %>" class="text-blue-600">Set Default</a>
                        <% } %>
                        <a href="/edit-address-page/<%= a._id %>" class="text-yellow-600">Edit</a>
                        <a href="/delete-address/<%= a._id %>" class="text-red-600">Delete</a>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p class="text-center text-gray-500">No saved addresses found. Add a new address to proceed.</p>
    <% } %>
</div>

                
                <div id="addAddressSection" class="mb-4">
                    <button id="toggleAddressForm" class="w-full border-2 border-dashed border-purple-500 text-purple-500 py-2 rounded-lg flex items-center justify-center hover:bg-purple-50 transition">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        Add New Address
                    </button>
        
                    <form id="addressForm" method="POST" action="/add-address" class="hidden mt-4 space-y-4">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Full Name *</label>
                                <input type="text" name="fullname" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" required>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Phone Number *</label>
                                <input type="tel" pattern="[0-9]{10}" name="phone" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" placeholder="10 digit mobile number" required>
                            </div>
                        </div>
        
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Flat, House no., Building, Company *</label>
                            <input type="text" name="house" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" required>
                        </div>
        
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Area, Street, Sector, Village *</label>
                            <input type="text" name="street" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" required>
                        </div>
        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Pincode *</label>
                                <input type="text" pattern="[0-9]{6}" name="pincode" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" placeholder="6 digits [0-9] PIN code" required>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Landmark (optional)</label>
                                <input type="text" name="landmark" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" placeholder="near appolo hospital">
                            </div>
                        </div>
        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">City/Town *</label>
                                <input type="text" name="city" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" required>
                            </div>
                            <div> 
                                <label class="block text-sm font-medium text-gray-700">State *</label>
                                <select name="state" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200" required>
                                    <option value="">Select your state</option>
                                    <option>Maharashtra</option>
                                    <option>Delhi</option>
                                    <option>Karnataka</option>
                                    <option>Kerala</option>
                                    <option>Tamilnadu</option>
                                    <option>Andra</option>
                                    <option>Telungana</option>
                                    <!-- Add more states as needed -->
                                </select>
                            </div>
                        </div>
        
                        <div class="flex items-center space-x-4">
                            <div class="flex items-center">
                                <input type="radio" name="addressType" value="home" id="homeAddress" class="focus:ring-purple-500 h-4 w-4 text-purple-600 border-gray-300" checked>
                                <label for="homeAddress" class="ml-2 block text-sm text-gray-900">Home</label>
                            </div>
                            <div class="flex items-center">
                                <input type="radio" name="addressType" value="work" id="workAddress" class="focus:ring-purple-500 h-4 w-4 text-purple-600 border-gray-300">
                                <label for="workAddress" class="ml-2 block text-sm text-gray-900">Work</label>
                            </div>
                        </div>
        
                        <div class="flex items-center">
                            <input type="checkbox" id="defaultAddress" class="focus:ring-purple-500 h-4 w-4 text-purple-600 border-gray-300 rounded">
                            <label for="defaultAddress" class="ml-2 block text-sm text-gray-900">Make this my default address</label>
                        </div>
        
                        <div class="flex space-x-4">
                            <button type="submit" class="w-full bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 transition">Save Address</button>
                            <button type="button" id="cancelAddressForm" class="w-full border border-gray-300 text-gray-700 py-2 rounded-lg hover:bg-gray-50 transition">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
       
        const toggleButton = document.getElementById('toggleAddressForm');
        const addressForm = document.getElementById('addressForm');
        const cancelButton = document.getElementById('cancelAddressForm');

        toggleButton.addEventListener('click', () => {
            addressForm.classList.remove('hidden');
            toggleButton.classList.add('hidden');
        });

        cancelButton.addEventListener('click', () => {
            addressForm.classList.add('hidden');
            toggleButton.classList.remove('hidden');
        });

    </script>
</body>
</html>