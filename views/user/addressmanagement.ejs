<form id="addressForm" method="POST" action="/add-address" class="hidden mt-4 space-y-5">

  <!-- Full Name -->
  <div>
    <label class="block text-sm font-medium text-gray-700">Full Name *</label>
    <input
      type="text"
      name="fullname"
      minlength="3"
      title="Only letters and spaces, minimum 3 characters"
      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200"
      placeholder="John Doe"
    />
    <p class="error text-red-600 text-sm mt-1 hidden"></p>
  </div>

  <!-- Phone -->
  <div>
    <label class="block text-sm font-medium text-gray-700">Phone Number *</label>
    <input
      type="tel"
      name="phone"
      maxlength="10"
      title="Valid 10-digit Indian mobile number (starts with 6â€“9)"
      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200"
      placeholder="9876543210"
    />
    <p class="error text-red-600 text-sm mt-1 hidden"></p>
  </div>

  <!-- Pincode -->
  <div>
    <label class="block text-sm font-medium text-gray-700">Pincode *</label>
    <input
      type="text"
      name="pincode"
      maxlength="6"
      title="Valid 6-digit Indian pincode (not starting with 0)"
      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200"
      placeholder="400001"
    />
    <p class="error text-red-600 text-sm mt-1 hidden"></p>
  </div>

 

  <!-- City + State side by side -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">City / Town *</label>
      <input
        type="text"
        name="city"
        title="Only letters and spaces, minimum 2 characters"
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200"
        placeholder="Mumbai"
      />
      <p class="error text-red-600 text-sm mt-1 hidden"></p>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">State *</label>
      <select
        name="state"
        required
        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-purple-500 focus:ring focus:ring-purple-200"
