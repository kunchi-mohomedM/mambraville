<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Wishlist - MambraVille</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
</head>

<body class="bg-gray-50">

  <header class="bg-white shadow-sm">
    <%-include("../../views/partials/user/header")-%>
  </header>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 max-w-7xl">
    <!-- Page Title - Responsive -->
    <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-4 sm:mb-6">Your Profile</h1>

    <div class="flex flex-col lg:flex-row gap-4 sm:gap-6">

      <!-- Left Sidebar - Responsive -->
      <div class="w-full lg:w-1/4 xl:w-1/5">
        <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 mb-4 sm:mb-6 sticky top-24">

          <!-- Profile Header -->
          <div class="flex flex-col items-center mb-4 sm:mb-6 pb-4 border-b border-gray-200">
            <input type="file" id="image-input" accept="image/*" class="hidden" />
            <div class="text-center">
              <p class="text-gray-600 text-sm mb-1">Hello,</p>
              <h2 class="text-lg sm:text-xl font-semibold text-gray-900">
                <%= user.fullname %>
              </h2>
            </div>
          </div>

          <!-- Image Cropper Modal - Responsive -->
          <div id="crop-modal"
            class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden z-50 p-4">
            <div class="bg-white p-4 sm:p-6 rounded-lg shadow-lg max-w-sm w-full">
              <h2 class="text-lg font-semibold mb-3">Crop Image</h2>
              <div class="w-full aspect-square max-w-xs mx-auto overflow-hidden rounded-lg">
                <img id="crop-image" class="w-full h-full object-cover" />
              </div>
              <div class="flex justify-end gap-2 sm:gap-3 mt-4">
                <button id="cancel-btn"
                  class="px-4 py-2 bg-gray-500 hover:bg-gray-600 text-white rounded-md text-sm font-medium transition">
                  Cancel
                </button>
                <button id="crop-btn"
                  class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md text-sm font-medium transition">
                  Crop & Save
                </button>
              </div>
            </div>
          </div>

          <!-- Navigation Menu - Responsive -->
          <nav>
            <ul class="space-y-1">
              <li>
                <a href="/user-Profile"
                  class="flex items-center px-3 py-2.5 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 rounded-md transition text-sm sm:text-base">
                  <i class="fas fa-user mr-3 w-5 text-gray-500"></i>
                  <span>Profile Information</span>
                </a>
              </li>
              <li>
                <a href="/order-summary"
                  class="flex items-center px-3 py-2.5 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 rounded-md transition text-sm sm:text-base">
                  <i class="fas fa-shopping-bag mr-3 w-5 text-gray-500"></i>
                  <span>My Orders</span>
                </a>
              </li>
              <li>
                <a href="/addressmanagement"
                  class="flex items-center px-3 py-2.5 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 rounded-md transition text-sm sm:text-base">
                  <i class="fas fa-home mr-3 w-5 text-gray-500"></i>
                  <span>Manage Addresses</span>
                </a>
              </li>
              <li>
                <a href="/wallet"
                  class="flex items-center px-3 py-2.5 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 rounded-md transition text-sm sm:text-base">
                  <i class="fas fa-wallet mr-3 w-5 text-gray-500"></i>
                  <span>My Wallet</span>
                </a>
              </li>
              <li>
                <a href="/wishlist"
                  class="flex items-center px-3 py-2.5 bg-indigo-50 text-indigo-600 font-medium rounded-md text-sm sm:text-base">
                  <i class="fas fa-heart mr-3 w-5"></i>
                  <span>My Wishlist</span>
                </a>
              </li>
              <li>
                <a href="/change-password"
                  class="flex items-center px-3 py-2.5 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 rounded-md transition text-sm sm:text-base">
                  <i class="fas fa-key mr-3 w-5 text-gray-500"></i>
                  <span>Change Password</span>
                </a>
              </li>
            </ul>
          </nav>

          <!-- Logout - Responsive -->
          <div class="border-t border-gray-200 mt-4 pt-4">
            <a href="/logout"
              class="flex items-center px-3 py-2.5 text-red-600 hover:bg-red-50 rounded-md transition text-sm sm:text-base">
              <i class="fas fa-sign-out-alt mr-3 w-5"></i>
              <span>Log out</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Main Content - Wishlist - Responsive -->
      <div class="flex-1 w-full lg:w-3/4 xl:w-4/5">
        <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 lg:p-8">

          <!-- Wishlist Header - Responsive -->
          <div
            class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 sm:mb-6 pb-4 border-b border-gray-200">
            <h2 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900 mb-2 sm:mb-0">Your Wishlist</h2>
            <% if (wishlist.items.length> 0) { %>
              <p class="text-sm sm:text-base text-gray-600">
                <span class="font-semibold text-indigo-600">
                  <%= wishlist.items.length %>
                </span>
                <%= wishlist.items.length===1 ? 'item' : 'items' %>
              </p>
              <% } %>
          </div>

          <!-- Empty State - Responsive -->
          <% if (wishlist.items.length===0) { %>
            <div class="text-center py-12 sm:py-16 lg:py-20">
              <div class="mb-6">
                <i class="fas fa-heart text-6xl sm:text-7xl lg:text-8xl text-gray-300"></i>
              </div>
              <h3 class="text-lg sm:text-xl lg:text-2xl font-semibold text-gray-700 mb-2">Your wishlist is empty</h3>
              <p class="text-sm sm:text-base text-gray-500 mb-6">Start adding products you love!</p>
              <a href="/products-user"
                class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-6 sm:px-8 py-2.5 sm:py-3 rounded-lg font-medium transition text-sm sm:text-base">
                Browse Products
              </a>
            </div>
            <% } else { %>

              <!-- Wishlist Grid - Fully Responsive -->
              <div
                class="grid grid-cols-1 xs:grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-4 gap-4 sm:gap-5 lg:gap-6">
                <% wishlist.items.forEach(item=> { %>
                  <div
                    class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden flex flex-col h-full group">

                    <!-- Product Image - Responsive & Clickable -->
                    <a href="/productdetails/<%= item.productId?._id || '' %>"
                      class="block relative pt-[100%] bg-gray-50 overflow-hidden">
                      <img src="<%= item.productId?.productImage?.[0]?.url || '/images/default.jpg' %>"
                        alt="<%= item.productId?.productName || 'Product' %>"
                        class="absolute inset-0 w-full h-full object-contain p-3 sm:p-4 group-hover:scale-110 transition-transform duration-500 cursor-pointer"
                        loading="lazy" />

                      <!-- Discount Badge - Responsive -->
                      <% if (item.productId?.discountPercent> 0) { %>
                        <div class="absolute top-2 left-2 sm:top-3 sm:left-3 z-10">
                          <span
                            class="bg-orange-600 text-white text-xs sm:text-sm font-bold px-2 sm:px-2.5 py-1 rounded-full shadow-md">
                            <%= item.productId?.discountPercent %>% OFF
                          </span>
                        </div>
                        <% } %>
                    </a>

                    <!-- Content Area - Responsive -->
                    <div class="flex flex-col flex-grow p-3 sm:p-4">

                      <!-- Product Name - Responsive -->
                      <h3
                        class="font-semibold text-gray-800 text-sm sm:text-base lg:text-lg line-clamp-2 min-h-[2.5rem] sm:min-h-[3rem] mb-2">
                        <%= item.productId?.productName || "Product not available" %>
                      </h3>

                      <!-- Price Section - Responsive -->
                      <div class="flex items-center gap-2 mt-1 mb-3 flex-wrap">
                        <p class="text-purple-700 font-bold text-lg sm:text-xl lg:text-2xl">
                          ₹<%= item.productId?.discountedPrice || item.productId?.price || "-" %>
                        </p>

                        <% if (item.productId?.discountPercent> 0) { %>
                          <p class="text-gray-500 text-xs sm:text-sm line-through">
                            ₹<%= item.productId?.originalPrice || item.productId?.price %>
                          </p>
                          <% } %>
                      </div>

                      <!-- Spacer to push buttons to bottom -->
                      <div class="flex-grow"></div>

                      <!-- Action Buttons - Responsive -->
                      <div class="space-y-2 mt-3">
                        <button onclick="moveToCart('<%= item.productId?._id || '' %>')"
                          class="bg-green-600 hover:bg-green-700 active:bg-green-800 text-white w-full py-2 sm:py-2.5 rounded-lg font-medium transition-all duration-200 text-xs sm:text-sm lg:text-base shadow-sm hover:shadow-md">
                          <i class="fas fa-shopping-cart mr-1 sm:mr-2"></i>
                          <span>Move to Cart</span>
                        </button>
                        <button onclick="removeWishlist('<%= item.productId?._id || '' %>')"
                          class="bg-red-500 hover:bg-red-600 active:bg-red-700 text-white w-full py-2 sm:py-2.5 rounded-lg font-medium transition-all duration-200 text-xs sm:text-sm lg:text-base shadow-sm hover:shadow-md">
                          <i class="fas fa-trash-alt mr-1 sm:mr-2"></i>
                          <span>Remove</span>
                        </button>
                      </div>
                    </div>
                  </div>
                  <% }) %>
              </div>

              <% } %>
        </div>
      </div>
    </div>
  </div>

  <%-include("../../views/partials/user/footer")-%>

    <script>
      // Remove from wishlist with confirmation
      function removeWishlist(id) {
        if (confirm('Are you sure you want to remove this item from your wishlist?')) {
          fetch("/wishlist/remove", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ productId: id }),
          })
            .then(response => {
              if (response.ok) {
                location.reload();
              } else {
                alert('Failed to remove item. Please try again.');
              }
            })
            .catch(error => {
              console.error('Error:', error);
              alert('An error occurred. Please try again.');
            });
        }
      }

      // Move to cart
      function moveToCart(id) {
        fetch("/wishlist/move-to-cart", {
          method: "POST",
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: "productId=" + encodeURIComponent(id),
        })
          .then(response => {
            if (response.ok) {
              location.reload();
            } else {
              alert('Failed to move item to cart. Please try again.');
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('An error occurred. Please try again.');
          });
      }
    </script>

</body>

</html>