<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders | E-commerce</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>


<body class="bg-gray-50">
    
 <header class="bg-white shadow-sm">
        <%-include("../../views/partials/user/header")-%>
    </header>
<div class="container mx-auto px-4 py-8 max-w-6xl">
    
    <h1 class="text-3xl font-bold text-gray-900 mb-6">My Orders</h1>

    <div class="flex flex-col md:flex-row gap-6">

        <!-- LEFT SIDEBAR  -->
        <div class="w-full md:w-1/3 lg:w-1/4">
            <div class="bg-white rounded-lg shadow p-6 mb-6">
                <div class="flex flex-col items-center mb-6">
                  

                    <div class="text-center mt-2">
                        <p class="text-gray-600">Hello,</p>
                        <h2 class="text-xl font-semibold"><%= user.fullname %></h2>
                    </div>
                </div>

                <div class="border-t border-gray-200 pt-4">
                    <ul class="space-y-4">
                        <li>
                            <a href="/user-profile" class="flex items-center text-gray-700 hover:text-indigo-600">
                                <i class="fas fa-user mr-3 w-5"></i> Profile Information
                            </a>
                        </li>
                        <li>
                            <a href="/order-summary" class="flex items-center text-indigo-600 font-medium">
                                <i class="fas fa-shopping-bag mr-3 w-5"></i> My Orders
                            </a>
                        </li>
                        <li>
                            <a href="/addressmanagement" class="flex items-center text-gray-700 hover:text-indigo-600">
                                <i class="fas fa-home mr-3 w-5"></i> Manage Addresses
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center text-gray-700 hover:text-indigo-600">
                                <i class="fas fa-wallet mr-3 w-5"></i> My Wallet
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center text-gray-700 hover:text-indigo-600">
                                <i class="fas fa-heart mr-3 w-5"></i> My Wishlist
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center text-gray-700 hover:text-indigo-600">
                                <i class="fas fa-key mr-3 w-5"></i> Change Password
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="border-t border-gray-200 mt-6 pt-4">
                    <a href="/logout" class="flex items-center text-red-600 hover:text-red-700">
                        <i class="fas fa-sign-out-alt mr-3 w-5"></i> Log out
                    </a>
                </div>
            </div>
        </div>

        <!-- RIGHT: ORDERS TABLE -->
        <div class="w-full md:w-2/3 lg:w-3/4">
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="text-2xl font-semibold mb-4">Order Summary</h2>

                <div class="flex justify-between items-center mb-4">

    <!-- SEARCH BAR -->
<form action="/order-summary" method="GET" class="relative w-72">
    <input 
        type="text" 
        name="search" 
        placeholder="Search orders..."
        value="<%= typeof search !== 'undefined' ? search : '' %>"
        class="border px-3 py-2 rounded-md w-full"
    />

    <% if (search && search.trim() !== "") { %>
        <!-- CLEAR BUTTON -->
        <a href="/order-summary"
           class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700">
            <i class="fas fa-times"></i>
        </a>
    <% } %>
</form>

</div>


        <div class="overflow-x-auto w-full">
        <table class="min-w-[1100px] w-full text-left border-collapse">
    <thead>
        <tr class="bg-gray-100 text-gray-700 text-sm">
            <th class="p-2">Product</th>
            <th class="p-4">Qty</th>
            <th class="p-4">Price</th>
            <th class="p-4">Status</th>
            <th class="p-4">Ordered</th>
            <th class="p-4">Delivered</th>
            <th class="p-4">Action</th>
        </tr>
    </thead>
<tbody>
    <% if (orders && orders.length > 0) { %>
        <% orders.forEach(order => { %>

            <tr class="border-b">

                <!-- PRODUCT PREVIEW (ONLY FIRST ITEM) -->
                <td class="p-2 flex items-center gap-3">
                    <% const first = order.items[0]; %>

                    <img src="<%= first.image %>" class="w-12 h-12 object-cover rounded">

                    <div class="flex flex-col">
                        <span class="font-medium"><%= first.name %></span>

                        <% if (order.items.length > 1) { %>
                            <span class="text-xs text-gray-500">
                                +<%= order.items.length - 1 %> more item(s)
                            </span>
                        <% } %>
                    </div>
                </td>

                <!-- QTY (total qty of order) -->
                <td class="p-3">
                    <%= order.items.reduce((sum, item) => sum + item.qty, 0) %>
                </td>

                <!-- TOTAL PRICE -->
                <td class="p-3">â‚¹<%= order.totalAmount %></td>


                <!-- STATUS -->
                <td class="p-3">
                    <span class="px-2 py-1 rounded text-sm 
                        <%= order.status === 'Delivered'
                            ? 'bg-green-100 text-green-700'
                            : order.status === 'Shipped'
                            ? 'bg-blue-100 text-blue-700'
                            : 'bg-yellow-100 text-yellow-700' %>">
                        <%= order.status %>
                    </span>
                </td>

                <!-- ORDERED DATE -->
                <td class="p-3">
                    <%= order.orderedAt.toLocaleDateString('en-IN') %>
                </td>

                <!-- DELIVERED DATE -->
                <td class="p-3">
                    <%= order.deliveredAt ? order.deliveredAt.toLocaleDateString('en-IN') : '-' %>
                </td>

                <!-- ALWAYS SHOW BUTTON -->
                <td class="p-3">
                    <a href="/order/details/<%= order._id %>"
                        class="px-4 py-2 bg-indigo-600 text-white rounded-md text-xs hover:bg-indigo-700">
                        View Details
                    </a>
                </td>

            </tr>

        <% }) %>
    <% } else { %>

        <tr>
            <td colspan="8" class="py-6 text-center text-gray-500">
                No Orders Found
            </td>
        </tr>

    <% } %>
</tbody>

    
</table>

                </div>

            </div>
        </div>

    </div>
</div>
 <%-include("../../views/partials/user/footer")-%>
</body>
</html>
