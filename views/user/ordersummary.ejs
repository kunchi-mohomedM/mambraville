<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders | E-commerce</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-50">
<div class="container mx-auto px-4 py-8 max-w-6xl">
    
    <h1 class="text-3xl font-bold text-gray-900 mb-6">My Orders</h1>

    <div class="flex flex-col md:flex-row gap-6">

        <!-- LEFT SIDEBAR (unchanged from your page) -->
        <div class="w-full md:w-1/3 lg:w-1/4">
            <div class="bg-white rounded-lg shadow p-6 mb-6">
                <div class="flex flex-col items-center mb-6">
                    <div class="relative w-20 h-20">
                        <img src="/images/default-user.png"
                             class="w-20 h-20 rounded-full object-cover border-2 border-gray-300">
                    </div>

                    <div class="text-center mt-2">
                        <p class="text-gray-600">Hello,</p>
                        <h2 class="text-xl font-semibold"><%= user.fullname %></h2>
                    </div>
                </div>

                <div class="border-t border-gray-200 pt-4">
                    <ul class="space-y-4">
                        <li>
                            <a href="/user-profile" class="flex items-center text-gray-700 hover:text-indigo-600">
                                <i class="fas fa-user mr-3 w-5"></i> Profile Information
                            </a>
                        </li>
                        <li>
                            <a href="/order-summary" class="flex items-center text-indigo-600 font-medium">
                                <i class="fas fa-shopping-bag mr-3 w-5"></i> My Orders
                            </a>
                        </li>
                        <li>
                            <a href="/addressmanagement" class="flex items-center text-gray-700 hover:text-indigo-600">
                                <i class="fas fa-home mr-3 w-5"></i> Manage Addresses
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center text-gray-700 hover:text-indigo-600">
                                <i class="fas fa-wallet mr-3 w-5"></i> My Wallet
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center text-gray-700 hover:text-indigo-600">
                                <i class="fas fa-heart mr-3 w-5"></i> My Wishlist
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center text-gray-700 hover:text-indigo-600">
                                <i class="fas fa-key mr-3 w-5"></i> Change Password
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="border-t border-gray-200 mt-6 pt-4">
                    <a href="/logout" class="flex items-center text-red-600 hover:text-red-700">
                        <i class="fas fa-sign-out-alt mr-3 w-5"></i> Log out
                    </a>
                </div>
            </div>
        </div>

        <!-- RIGHT: ORDERS TABLE -->
        <div class="w-full md:w-2/3 lg:w-3/4">
            <div class="bg-white rounded-lg shadow p-6">
                <h2 class="text-2xl font-semibold mb-4">Order Summary</h2>

                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-gray-100 text-gray-700 text-sm">
                                <th class="p-3">Product</th>
                                <th class="p-3">Qty</th>
                                <th class="p-3">Price</th>
                                <th class="p-3">Discount</th>
                                <th class="p-3">Status</th>
                                <th class="p-3">Address</th>
                                <th class="p-3">Ordered</th>
                                <th class="p-3">Delivered</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% if (orders && orders.length > 0) { %>
                                <% orders.forEach(order => { %>
                                    <% order.items.forEach(item => { %>
                                        <tr class="border-b">
                                            <td class="p-3 flex items-center gap-3">
                                                <img src="<%= item.image %>" class="w-12 h-12 object-cover rounded">
                                                <span><%= item.name %></span>
                                            </td>
                                            <td class="p-3"><%= item.qty %></td>
                                            <td class="p-3">â‚¹<%= item.price %></td>
                                            <td class="p-3"><%= item.discount %>%</td>
                                            <td class="p-3">
                                                <span class="px-2 py-1 rounded text-sm 
                                                    <%= order.status === 'Delivered' ? 'bg-green-100 text-green-700' :
                                                        order.status === 'Shipped' ? 'bg-blue-100 text-blue-700' :
                                                        'bg-yellow-100 text-yellow-700' %>">
                                                    <%= order.status %>
                                                </span>
                                            </td>
                                            <td class="p-3 text-sm">
                                                <%= order.address.fullname %>, 
                                                <%= order.address.street %>,
                                                <%= order.address.city %> -
                                                <%= order.address.pincode %>
                                            </td>
                                            <td class="p-3"><%= order.orderedAt.toLocaleDateString('en-IN') %></td>
                                            <td class="p-3"><%= order.deliveredAt ? order.deliveredAt.toLocaleDateString('en-IN') : '-' %></td>
                                        </tr>
                                    <% }) %>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center py-6 text-gray-500">No orders found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </div>
</div>
</body>
</html>
