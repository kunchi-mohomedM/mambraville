<script>
  const form = document.querySelector('form[action="/change-password"]');
  
  if (form) {
    form.addEventListener('submit', function(e) {
      const currentPassword = document.querySelector('input[name="currentPassword"]').value;
      const newPassword = document.querySelector('input[name="newPassword"]').value;
      const confirmPassword = document.querySelector('input[name="confirmPassword"]').value;

      // 1. Current password is required
      if (!currentPassword) {
        e.preventDefault();
        Swal.fire({
          icon: 'error',
          title: 'Missing Field',
          text: 'Please enter your current password',
          confirmButtonColor: '#4f46e5'
        });
        return;
      }

      // 2. New password and confirmation must match
      if (newPassword !== confirmPassword) {
        e.preventDefault();
        Swal.fire({
          icon: 'error',
          title: 'Mismatch',
          text: 'New password and confirmation do not match!',
          confirmButtonColor: '#4f46e5'
        });
        return;
      }

      // 3. New password must be different from current (client-side check)
      if (newPassword === currentPassword) {
        e.preventDefault();
        Swal.fire({
          icon: 'error',
          title: 'Same Password',
          text: 'New password must be different from current password!',
          confirmButtonColor: '#4f46e5'
        });
        return;
      }

      // 4. Strong password check
      const strongPasswordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

      if (!strongPasswordRegex.test(newPassword)) {
        e.preventDefault();
        Swal.fire({
          icon: 'error',
          title: 'Weak Password',
          html: 'Password must be at least 8 characters long and include:<br>' +
                '• One uppercase letter (A-Z)<br>' +
                '• One lowercase letter (a-z)<br>' +
                '• One number (0-9)<br>' +
                '• One special character (@ $ ! % * ? &)',
          confirmButtonColor: '#4f46e5'
        });
        return;
      }
    });
  }
</script>

