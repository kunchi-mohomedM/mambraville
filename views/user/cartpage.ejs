<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body class="bg-gray-100">

    <header class="bg-white shadow-sm">
        <%-include("../../views/partials/user/header")-%>
    </header>

   <% if (typeof mssg !== "undefined" && mssg) { %>
  <div class="max-w-4xl mx-auto mb-8 px-4">
    <div class="flex items-center gap-4 p-5 bg-red-50 border-l-4 border-red-500 rounded-r-xl shadow-md 
                animate__animated animate__fadeInDown animate__faster">
      
      <!-- Icon -->
      <div class="flex-shrink-0">
        <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"
             xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
      </div>

      <!-- Message Text -->
      <div class="flex-1">
        <p class="text-lg font-semibold text-red-800"><%= mssg %></p>
      </div>

      <!-- Optional: Dismiss Button -->
      <button 
        onclick="this.closest('.max-w-4xl').remove()" 
        class="flex-shrink-0 text-red-600 hover:text-red-800 transition-colors duration-200"
        aria-label="Dismiss alert">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>
<% } %>


<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Your Cart</h1>

    <% if (cart && cart.items && cart.items.length > 0) { %>

        <div class="bg-white shadow rounded-lg p-4">
            <table class="min-w-full table-auto">
                <thead>
                    <tr class="border-b">
                        <th class="px-4 py-2 text-left">Image</th>
                        <th class="px-4 py-2 text-left">Name</th>
                        <th class="px-4 py-2 text-left">Quantity</th>
                        <th class="px-4 py-2 text-left">Subtotal</th>
                        <th class="px-4 py-2 text-left">Action</th>
                    </tr>
                </thead>

                <tbody>
                <% cart.items.forEach(item => { %>
                    <tr class="border-b">

                        <!-- Product Image -->
                        <td class="py-2 px-4">
                            <img src="<%= item.product.productImage[0].url %>"
     class="w-16 h-16 object-cover rounded">

                        </td>

                        <!-- Product Name -->
                        <td class="py-2 px-4">
                            <%= item.product.productName %>
                        </td>

                        <!-- QUANTITY SECTION -->
                        <td class="py-2 px-4">
                            <div class="flex items-center gap-2">

                                <!-- Decrease -->
                                <a href="/cart/decrease/<%= item.product._id %>"
                                   class="px-2 py-1 bg-gray-200 rounded hover:bg-gray-300">-</a>

                                <span class="px-3 font-semibold"><%= item.qty %></span>

                                <% 
                                    const currentStock = item.currentStock != null 
                                        ? item.currentStock 
                                        : (item.productId && item.productId.quantity ? item.productId.quantity : 0);

                                    const reachedStockLimit = currentStock && item.qty >= currentStock;
                                    const reachedMax = item.qty >= 5; // MAX_QTY
                                %>

                                <% if (reachedStockLimit || reachedMax) { %>
                                    <button disabled class="px-2 py-1 bg-gray-300 text-gray-600 rounded">+</button>
                                <% } else { %>
                                    <a href="/cart/increase/<%= item.product._id %>"
                                       class="px-2 py-1 bg-blue-500 text-white rounded hover:bg-blue-600">+</a>
                                <% } %>

                            </div>
                        </td>

                        <!-- Subtotal -->
                        <td class="py-2 px-4 font-semibold">
                          ₹ <%= item.subtotal.toFixed(2) %>
                        </td>

                        <!-- Remove -->
                        <td class="py-2 px-4">
                            <form action="/cart/remove/<%= item.product._id %>" method="POST">
                                <button type="submit"
                                        class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">
                                    Remove
                                </button>
                            </form>
                        </td>

                    </tr>
                <% }) %>
                </tbody>

            </table>
        </div>

        <!-- CART TOTAL -->
        <div class="bg-white shadow rounded-lg p-4 mt-6">
            <h2 class="text-xl font-semibold">Cart Total: ₹ <%= Math.round(cart.cartTotal).toLocaleString()%></h2>

            <div class="mt-4">
                <a href="/checkout"
                   class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                    Proceed to Checkout
                </a>
            </div>
        </div>

    <% } else { %>

        <!-- EMPTY CART -->
        <div class="bg-white p-6 shadow rounded-lg text-center">
            <h2 class="text-xl font-semibold mb-4">Your cart is empty</h2>
            <a href="/products-user"
               class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                Continue Shopping
            </a>
        </div>

    <% } %>

</div>

</body>
</html>
