<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management | Mambraville Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.16.1/sweetalert2.min.js" integrity="sha512-LGHBR+kJ5jZSIzhhdfytPoEHzgaYuTRifq9g5l6ja6/k9NAOsAi5dQh4zQF6JIRB8cAYxTRedERUF+97/KuivQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.16.1/sweetalert2.css" integrity="sha512-fjO3Vy3QodX9c6G9AUmr6WuIaEPdGRxBjD7gjatG5gGylzYyrEq3U0q+smkG6CwIY0L8XALRFHh4KPHig0Q1ug==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .sidebar {
            transition: transform 0.3s ease-in-out;
        }
        @media (max-width: 768px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: 0;
                height: 100vh;
                transform: translateX(-100%);
                z-index: 50;
            }
            .sidebar.active {
                transform: translateX(0);
            }
            .overlay {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.5);
                z-index: 40;
                display: none;
            }
            .overlay.active {
                display: block;
            }
            .table-container {
                min-width: 600px;
            }
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- Overlay for mobile sidebar -->
    <div id="overlay" class="overlay"></div>

    <div class="flex min-h-screen">
        <!-- Sidebar -->
        <%- include('../partials/admin/sidebar') %>     

        <!-- Mobile Menu Toggle -->
        <div class="md:hidden fixed top-4 left-4 z-50">
            <button id="menu-toggle" class="text-white p-2">
                <i class="fas fa-bars text-2xl"></i>
            </button>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">
            <!-- Header -->
            <header class="bg-gradient-to-r from-black to-purple-900 text-white p-4 sticky top-0 z-30">
                <div class="max-w-7xl mx-auto flex justify-between items-center flex-wrap gap-4">
                    <h1 class="text-2xl font-bold">Users</h1>
                   
                </div>
            </header>

            <!-- Content -->
            <main class="flex-1 p-6">
                <div class="max-w-7xl mx-auto bg-white rounded-lg shadow">
                    <div class="p-6">
                        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
                            <!-- Search Form -->
                            <form action="/admin/users" method="GET" class="flex items-center gap-4">
                                <div class="relative w-full sm:w-64">
  <input
    type="text"
    id="userSearchInput"
    name="search"
    placeholder="Search for user"
    value="<%= typeof search !== 'undefined' ? search : '' %>"
    class="w-full bg-white bg-opacity-20 rounded-full py-2 px-4 pl-10 pr-10 text-gray-700 placeholder-gray-400 
    focus:outline-none focus:ring-2 focus:ring-blue-400"
  />

  <!-- Search icon -->
  <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>

  <!-- Clear button -->
  <button
    type="button"
    id="clearUserSearchBtn"
    class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-black hidden">
    <i class="fas fa-times"></i>
  </button>
</div>

                                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Search</button>
                            </form>
            
                            <!-- Sort Dropdown -->
                            <form action="/admin/users" method="GET">
                                <label for="sort" class="block text-gray-700 font-medium mb-2">Sort By:</label>
                                <select id="sort" name="sort" onchange="this.form.submit()"
                                    class="w-full sm:w-52 px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-lg shadow-sm 
                                    focus:outline-none focus:ring-2 focus:ring-blue-400">
                                    <option value="asc" <%= sort === 'asc' ? 'selected' : '' %>>A to Z</option>
                                    <option value="desc" <%= sort === 'desc' ? 'selected' : '' %>>Z to A</option>
                                    <option value="active" <%= sort === 'active' ? 'selected' : '' %>>Active Users</option>
                                    <option value="blocked" <%= sort === 'blocked' ? 'selected' : '' %>>Blocked Users</option>
                                </select>
                                <input type="hidden" name="page" value="1">
                                <input type="hidden" name="search" value="<%= search %>">
                            </form>
                        </div>
            
                        <div class="overflow-x-auto table-container">
                            <% if(users && users.length > 0) { %>   
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead>
                                    <tr class="border-b-2 border-gray-200">
                                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Profile</th>
                                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Username</th>
                                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Email</th>
                                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-500">Action</th>
                                    </tr>
                                </thead> 
                                <tbody class="divide-y divide-gray-200">
                                    <% users.forEach(user => { %>
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center text-white">
                                                <%= user.fullname.charAt(0).toUpperCase() %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-gray-700"><%= user.fullname %></td>
                                        <td class="px-6 py-4 whitespace-nowrap text-gray-700"><%= user.email %></td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center gap-4">
                                                <button 
                                                    class="btn-block text-white px-4 py-1 rounded text-sm transition-colors <%= user.isBlocked ? 'bg-red-500 hover:bg-red-600' : 'bg-blue-500 hover:bg-blue-600' %>"
                                                    data-user-id="<%= user._id %>"
                                                >
                                                    <%= user.isBlocked ? 'Unblock' : 'Block' %>
                                                </button>
                                               
                                            </div>
                                        </td>
                                    </tr>   
                                    <% }) %>
                                </tbody>
                            </table>
                            <% } else { %>
                            <div class="text-center py-12">
                                <h1 class="text-xl font-medium text-gray-700">No Users Found</h1>
                            </div>
                            <% } %>
                        </div>
            
                        <!-- Pagination -->
                        <% if (totalPages > 1) { %>
                        <div class="p-6 flex justify-center">
                            <nav class="flex items-center gap-1">
                                <% if (page > 1) { %>
                                <a href="/admin/users?page=<%= page - 1 %>&search=<%= search %>&sort=<%= sort %>" 
                                    class="px-3 py-1 bg-gray-200 rounded-l-md hover:bg-gray-300">
                                    <i class="fas fa-chevron-left text-gray-600"></i>
                                </a>
                                <% } %>
                                <% for(let i = 1; i <= totalPages; i++) { %>
                                    <a href="/admin/users?page=<%= i %>&search=<%= search %>&sort=<%= sort %>" 
                                        class="px-3 py-1 <%= page === i ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-600 hover:bg-gray-300' %>">
                                        <%= i %>
                                    </a>
                                <% } %>
                                <% if (page < totalPages) { %>
                                <a href="/admin/users?page=<%= page + 1 %>&search=<%= search %>&sort=<%= sort %>" 
                                    class="px-3 py-1 bg-gray-200 rounded-r-md hover:bg-gray-300">
                                    <i class="fas fa-chevron-right text-gray-600"></i>
                                </a>
                                <% } %>
                            </nav>
                        </div>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        function logout() {
            window.location.href = '/admin/logout';
        }

        
        // ðŸ” User search clear button logic
const userSearchInput = document.getElementById("userSearchInput");
const clearUserSearchBtn = document.getElementById("clearUserSearchBtn");

if (userSearchInput && clearUserSearchBtn) {
  // Show clear button if value already exists
  clearUserSearchBtn.classList.toggle("hidden", !userSearchInput.value);

  // Toggle while typing
  userSearchInput.addEventListener("input", () => {
    clearUserSearchBtn.classList.toggle("hidden", !userSearchInput.value);
  });

  // Clear search and reload users page
  clearUserSearchBtn.addEventListener("click", () => {
    window.location.href = "/admin/users";
  });
}



        document.addEventListener("DOMContentLoaded", () => {
            // Sidebar toggle
            const sidebar = document.getElementById('sidebar');
            const menuToggle = document.getElementById('menu-toggle');
            const overlay = document.getElementById('overlay');
            
            function toggleSidebar() {
                sidebar.classList.toggle('active');
                overlay.classList.toggle('active');
            }

            menuToggle.addEventListener('click', toggleSidebar);
            overlay.addEventListener('click', toggleSidebar);

            // Block/Unblock functionality (without alerts)
            const blockButtons = document.querySelectorAll('.btn-block');
            blockButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    const userId = this.getAttribute('data-user-id');
                
                const result = await Swal.fire({
                title: "Are you sure?",
                text: "Do you want to change the block status of this user?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, change it!"
            });
            if (result.isConfirmed) {
                    try {
                        const response = await fetch(`/admin/users/block/${userId}`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' }
                        });
                        const data = await response.json();
                        if (data.success) {
                            this.textContent = data.isBlocked ? 'Unblock' : 'Block';
                            this.classList.toggle('bg-blue-500');
                            this.classList.toggle('bg-red-500');
                            this.classList.toggle('hover:bg-blue-600');
                            this.classList.toggle('hover:bg-red-600');
                        } else {
                            console.error(data.message);
                        }
                    } catch (error) {
                        console.error('Error:', error);
                    }
                }
                });
            });

            // Modal functionality
            const addUserBtn = document.getElementById('add-user');
            const modal = document.getElementById('add-user-modal');
            const closeModal = document.getElementById('close-modal');
            const cancelModal = document.getElementById('cancel-modal');
            const addUserForm = document.getElementById('add-user-form');

            function toggleModal() {
                modal.classList.toggle('hidden');
            }

            addUserBtn.addEventListener('click', toggleModal);
            closeModal.addEventListener('click', toggleModal);
            cancelModal.addEventListener('click', toggleModal);
            overlay.addEventListener('click', toggleModal);

            addUserForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                const formData = new FormData(this);
                try {
                    const response = await fetch('/admin/users/add', {
                        method: 'POST',
                        body: JSON.stringify(Object.fromEntries(formData)),
                        headers: { 'Content-Type': 'application/json' }
                    });
                    const data = await response.json();
                    if (data.success) {
                        toggleModal();
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('An error occurred');
                }
            });
        });
    </script>
</body>
</html>