        </header>

        <!-- Content with Add Coupon Form -->
        <main class="flex-1 overflow-y-auto p-6 bg-white m-4 rounded-lg shadow">
          <div class="max-w-2xl mx-auto">
            <h2 class="text-xl font-semibold mb-6">Create New Coupon</h2>
            <form
              id="couponForm"
              class="space-y-6"
              method="POST"
              action="/addCoupon"
            >
              <!-- Coupon Code -->
              <div>
                <label
                  for="coupon-code"
                  class="block text-sm font-medium text-gray-700 mb-1"
                >
                  Coupon Code
                </label>
                <input
                  type="text"
                  id="coupon-code"
                  name="couponcode"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                  placeholder="Enter coupon code"
                />
                <p id="code-error" class="text-red-500 text-sm mt-1 hidden">
                  Coupon code is required
                </p>
              </div>

              <!-- Discount type-->
              <!-- Discount type -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Discount Type
                </label>
                <select
                  id="discount-type"
                  class="w-full px-4 py-2 border rounded"
                >
                  <option value="percentage">Percentage</option>
                  <option value="fixed">Fixed</option>
                </select>
              </div>

              <!-- Discount -->
              <div id="discount-field">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Discount Amount
                </label>
                <input
                  type="number"
                  id="discount"
                  name="discount"
                  class="w-full px-4 py-2 border rounded"
                />
              </div>

              <!-- Minimum Purchase -->
              <div id="min-purchase-field">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Minimum Purchase Amount
                </label>
                <input
                  type="number"
                  id="min-purchase"
                  name="minpurchaseamount"
                  class="w-full px-4 py-2 border rounded"
                />
              </div>

              <!-- Maximum Discount -->
              <div id="max-discount-field">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Maximum Discount Amount
                </label>
                <input
                  type="number"
                  id="max-discount"
                  name="maxdiscountamount"
                  class="w-full px-4 py-2 border rounded"
                />
              </div>

              <!-- Expiry Date -->
              <div id="expire-date-field">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                  Expiry Date
                </label>
                <input
                  type="date"
                  id="expire-date"
                  name="expiredate"
                  class="w-full px-4 py-2 border rounded"
                />
              </div>

              <!-- Add Button -->
              <div class="flex justify-end">
                <button
                  type="submit"
                  class="bg-purple-900 text-white px-6 py-2 rounded-md hover:bg-purple-800 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2"
                >
                  Add Coupon
                </button>
              </div>
            </form>
          </div>
        </main>
      </div>
    </div>

    <script>

  const discountTypeSelect = document.getElementById("discount-type");
  const maxDiscountField = document.getElementById("max-discount-field");

  function toggleDiscountFields() {
    const type = discountTypeSelect.value;

    if (type === "fixed") {
      // Hide max discount for fixed
      maxDiscountField.classList.add("hidden");
      document.getElementById("max-discount").value = "";
    } else {
      // Show max discount for percentage
      maxDiscountField.classList.remove("hidden");
    }
  }

  // Run on change
  discountTypeSelect.addEventListener("change", toggleDiscountFields);

  // Run on page load (default)
  toggleDiscountFields();







      document
        .getElementById("couponForm")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const couponCode = document
            .getElementById("coupon-code")
            .value.trim();
          const discountType = document.getElementById("discount-type").value;
          const discount = document.getElementById("discount").value.trim();
          const minPurchase = document
            .getElementById("min-purchase")
            .value.trim();
          const maxDiscount = document
            .getElementById("max-discount")
            .value.trim();
          const expireDate = document
            .getElementById("expire-date")
            .value.trim();
          const codeError = document.getElementById("code-error");

          // Client-side validation
          if (!couponCode) {
            codeError.classList.remove("hidden");
            return;
          } else {
            codeError.classList.add("hidden");
          }

          // Prepare data for submission
          const formData = {
            couponcode: couponCode,
            discountType: discountType,
            discount: discount,
            minpurchaseamount: minPurchase,
            maxdiscountamount: maxDiscount,
            expiredate: expireDate,
          };

          try {
            const response = await fetch("/admin/addCoupon", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(formData),
            });

            const result = await response.json();

            if (response.ok) {
              Swal.fire({
                icon: "success",
                title: "Coupon Added!",
                text: result.message,
                confirmButtonText: "Go to Coupon Management",
                confirmButtonColor: "#6b21a8",
              }).then(() => {
                window.location.href = "/admin/coupon";
              });
            } else {
              alert(result.error);
            }
          } catch (error) {
            console.error("Error submitting form:", error);
            alert("An error occurred while adding the coupon");
          }
        });

      function logout() {
        window.location.href = "/admin/logout";
      }
    </script>
  </body>
