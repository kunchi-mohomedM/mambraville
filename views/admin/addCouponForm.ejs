<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Coupon | Mambraville Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>

  <body class="bg-gray-100">
    <div class="flex h-screen">
      <!-- Sidebar (unchanged) -->
      <div class="w-64 bg-gradient-to-b from-black to-purple-900 text-white">
        <!-- Sidebar content remains the same -->
        <div class="p-4 flex items-center justify-center">
          <img src="/logo.png" alt="Mambraville" class="h-12" />
        </div>
        <nav class="mt-6">
          <!-- Navigation links -->
        </nav>
        <div class="absolute bottom-4 left-0 w-64 px-6">
          <button
            onclick="logout()"
            class="bg-white text-black py-2 px-4 rounded-full w-full font-medium"
          >
            Logout
          </button>
        </div>
      </div>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Header (unchanged) -->
        <header
          class="bg-gradient-to-r from-black to-purple-900 text-white p-4 flex justify-between items-center"
        >
          <h1 class="text-2xl font-bold">Add Coupon</h1>
          <!-- Header content -->
        </header>

        <!-- Content with Add Coupon Form -->
        <main class="flex-1 overflow-y-auto p-6 bg-white m-4 rounded-lg shadow">
          <div class="max-w-2xl mx-auto">
            <h2 class="text-xl font-semibold mb-6">Create New Coupon</h2>
            <form
              id="couponForm"
              class="space-y-6"
              method="POST"
              action="/addCoupon"
            >
              <!-- Coupon Code -->
              <div>
                <label
                  for="coupon-code"
                  class="block text-sm font-medium text-gray-700 mb-1"
                >
                  Coupon Code
                </label>
                <input
                  type="text"
                  id="coupon-code"
                  name="couponcode"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                  placeholder="Enter coupon code"
                />
                <p id="code-error" class="text-red-500 text-sm mt-1 hidden">
                  Coupon code is required
                </p>
              </div>

              <!-- Discount type-->
              <div>
                <select
                  id="discount-type"
                  class="w-full px-4 py-2 border rounded"
                >
                  <option value="percentage">Percentage</option>
                  <option value="fixed">Fixed</option>
                </select>
              </div>

              <!-- Discount -->
              <div>
                <label
                  for="discount"
                  class="block text-sm font-medium text-gray-700 mb-1"
                >
                  Discount Amount
                </label>
                <input
                  type="number"
                  id="discount"
                  name="discount"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                  placeholder="Enter discount amount"
                />
              </div>

              <!-- Minimum Purchase Amount -->
              <div>
                <label
                  for="min-purchase"
                  class="block text-sm font-medium text-gray-700 mb-1"
                >
                  Minimum Purchase Amount
                </label>
                <input
                  type="number"
                  id="min-purchase"
                  name="minpurchaseamount"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                  placeholder="Enter minimum purchase amount"
                />
              </div>

              <!-- Maximum Discount Amount -->
              <div>
                <label
                  for="max-discount"
                  class="block text-sm font-medium text-gray-700 mb-1"
                >
                  Maximum Discount Amount
                </label>
                <input
                  type="number"
                  id="max-discount"
                  name="maxdiscountamount"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                  placeholder="Enter maximum discount amount"
                />
              </div>

              <!-- Expiry Date -->
              <div>
                <label
                  for="expire-date"
                  class="block text-sm font-medium text-gray-700 mb-1"
                >
                  Expiry Date
                </label>
                <input
                  type="date"
                  id="expire-date"
                  name="expiredate"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                />
              </div>

              <!-- Add Button -->
              <div class="flex justify-end">
                <button
                  type="submit"
                  class="bg-purple-900 text-white px-6 py-2 rounded-md hover:bg-purple-800 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2"
                >
                  Add Coupon
                </button>
              </div>
            </form>
          </div>
        </main>
      </div>
    </div>

    <script>
      document
        .getElementById("couponForm")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const couponCode = document
            .getElementById("coupon-code")
            .value.trim();
          const discountType = document.getElementById("discount-type").value;
          const discount = document.getElementById("discount").value.trim();
          const minPurchase = document
            .getElementById("min-purchase")
            .value.trim();
          const maxDiscount = document
            .getElementById("max-discount")
            .value.trim();
          const expireDate = document
            .getElementById("expire-date")
            .value.trim();
          const codeError = document.getElementById("code-error");

          // Client-side validation
          if (!couponCode) {
            codeError.classList.remove("hidden");
            return;
          } else {
            codeError.classList.add("hidden");
          }

          // Prepare data for submission
          const formData = {
            couponcode: couponCode,
            discountType: discountType,
            discount: discount,
            minpurchaseamount: minPurchase,
            maxdiscountamount: maxDiscount,
            expiredate: expireDate,
          };

          try {
            const response = await fetch("/admin/addCoupon", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(formData),
            });

            const result = await response.json();

            if (response.ok) {
              Swal.fire({
                icon: "success",
                title: "Coupon Added!",
                text: result.message,
                confirmButtonText: "Go to Coupon Management",
                confirmButtonColor: "#6b21a8",
              }).then(() => {
                window.location.href = "/admin/coupon";
              });
            } 
            else
             {
              alert(result.error); 
            }

          } catch (error) {
            console.error("Error submitting form:", error);
            alert("An error occurred while adding the coupon");
          }
        });

      function logout() {
        window.location.href = "/admin/logout";
      }
    </script>
  </body>
</html>
