<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management | Mambraville Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100 font-sans">
    <div class="flex h-screen">
        <!-- Sidebar (Hidden on mobile, toggleable) -->
        <%- include('../partials/admin/sidebar') %>
        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header with Mobile Menu Toggle -->
            <header class="bg-gradient-to-r from-black to-purple-900 text-white p-4 flex justify-between items-center">
                <div class="flex items-center">
                    <button id="menu-toggle" class="md:hidden text-white mr-4">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                    <h1 class="text-xl md:text-2xl font-bold">Category</h1>
                </div>
                <div class="flex items-center">
                    <div class="relative mr-4 w-full max-w-xs">
                        <input type="text" placeholder="Search..." class="bg-white bg-opacity-20 rounded-full py-2 px-4 pl-10 text-white placeholder-gray-200 focus:outline-none focus:ring-2 focus:ring-white w-full">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-200"></i>
                    </div>
                    <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center">
                        <img src="/admin-avatar.png" alt="Admin" class="w-8 h-8 rounded-full">
                    </div>
                </div>
            </header>
            <p class="text-center text-red-500 p-4 font-bold"><%= message %></p>
            <!-- Content -->
            <main class="flex-1 overflow-y-auto p-4 md:p-6 bg-white m-2 md:m-4 rounded-lg shadow">
                <div class="overflow-x-auto">
                    <div class="flex flex-col sm:flex-row justify-between items-center mb-4">
                        <h2 class="text-lg md:text-xl font-semibold mb-2 sm:mb-0">Category List</h2>
                        <a href="addCategory" class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 flex items-center">
                            <i class="fas fa-plus mr-2"></i>Add New Category
                        </a>
                    </div>

                    <!-- Responsive Table -->
                    <div class="block overflow-x-auto">
                        <table class="min-w-full bg-white">
                            <% if(categories.length>0){ %>
                            <thead>
                                <tr class="bg-gray-100">
                                    <th class="py-2 px-2 md:py-3 md:px-6 text-left text-xs md:text-sm text-gray-600 font-semibold">Category Name</th>
                                    <th class="py-2 px-2 md:py-3 md:px-6 text-left text-xs md:text-sm text-gray-600 font-semibold">Description</th>
                                    <th class="py-2 px-2 md:py-3 md:px-6 text-left text-xs md:text-sm text-gray-600 font-semibold">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories.forEach(category => { %>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="py-2 px-2 md:py-4 md:px-6 text-sm"><%= category.categoryname %></td>
                                    <td class="py-2 px-2 md:py-4 md:px-6 text-sm"><%= category.description  %></td>
                                    <td class="py-2 px-2 md:py-4 md:px-6">
                                        <div class="flex space-x-2">
                                            <a href="/admin/editCategory/<%= category._id %>" class="text-blue-600 hover:text-blue-800">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button onclick="deleteCategory(2)" class="text-red-600 hover:text-red-800">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>        
                            </tbody>
                            </table>
                    <%}else{ %> 
                                <p> No category found</p>
                                <% } %> 
                    </div>
                </div>

                <!-- Pagination -->
                <div class="flex justify-center mt-4 md:mt-6">
                    <nav class="flex items-center space-x-1">
                        <a href="#" class="px-2 py-1 md:px-3 md:py-1 bg-gray-200 rounded-l-md hover:bg-gray-300">
                            <i class="fas fa-chevron-left text-gray-600"></i>
                        </a>
                        <a href="#" class="px-2 py-1 md:px-3 md:py-1 bg-blue-500 text-white">1</a>
                        <a href="#" class="px-2 py-1 md:px-3 md:py-1 bg-gray-200 rounded-r-md hover:bg-gray-300">
                            <i class="fas fa-chevron-right text-gray-600"></i>
                        </a>
                    </nav>
                </div>
            </main>
        </div>
    </div>

    <script>
        function logout() {
            window.location.href = '/admin/logout';
        }

        function deleteCategory(categoryId) {
            if (confirm('Are you sure you want to delete this category?')) {
                window.location.href = `/admin/category/delete/${categoryId}`;
            }
        }

        // Toggle sidebar on mobile
        const menuToggle = document.getElementById('menu-toggle');
        const sidebar = document.getElementById('sidebar');
        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('-translate-x-full');
        });
    </script>
</body>
</html>