<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coupon Management | Mambraville Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>

  <body class="bg-gray-100">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <%- include('../partials/admin/sidebar') %>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Header -->
        <header
          class="bg-gradient-to-r from-black to-purple-900 text-white p-4 flex justify-between items-center shadow-lg"
        >
          <h1 class="text-2xl font-bold">Coupon Management</h1>
          <div class="flex items-center space-x-4"></div>
        </header>

        <!-- Main Content Area -->
        <main class="flex-1 overflow-y-auto p-6">
          <div class="bg-white rounded-lg shadow-md">
            <!-- Page Header -->
            <div
              class="border-b border-gray-200 px-6 py-4 flex justify-between items-center"
            >
              <h2 class="text-xl font-semibold text-gray-800">All Coupons</h2>
              <a
                href="/admin/addCoupon"
                class="bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-5 rounded-lg transition duration-200 flex items-center space-x-2"
              >
                <i class="fas fa-plus"></i>
                <span>Create New Coupon</span>
              </a>
            </div>

            <!-- Coupons Table -->
            <div class="overflow-x-auto">
              <table class="w-full table-auto">
                <% if(Coupons.length>0){%>
                <thead class="bg-gray-50 border-b border-gray-200">
                  <tr>
                    <th
                      class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      Code
                    </th>
                    <th
                      class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      Discount
                    </th>
                    <th
                      class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      Type
                    </th>

                    <th
                      class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      Expiry Date
                    </th>

                    <th
                      class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                    >
                      Actions
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% Coupons.forEach(coupon=>{%>
                  <!-- Sample Coupon Row -->
                  <tr class="hover:bg-gray-50 transition">
                    <td
                      class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                    >
                      <%=coupon.code %>
                    </td>
                    <td
                      class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"
                    >
                      <%=coupon.discountValue%>
                    </td>
                    <td
                      class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"
                    >
                      <%=coupon.discountType%>
                    </td>

                    <td
                      class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"
                    >
                      <%=coupon.expiryDate.toLocaleDateString("en-In",{
                      day:"2-digit", month:"short", year:"numeric" }) %>
                    </td>

                    <td
                      class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-3"
                    >
                      <a
                        href="/admin/editCoupon/<%= coupon._id %>"
                        class="text-blue-600 hover:text-blue-800"
                      >
                        <i class="fas fa-edit"></i>
                      </a>
                      <button
                        onclick="deleteCoupon('<%= coupon._id %>')"
                        class="text-red-600 hover:text-red-800"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                  <%})%>
                </tbody>
              </table>
              <%}else{%>
              <p>No Coupons found</p>
              <%}%>
            </div>

            <!-- Pagination -->
<div class="mt-8 flex items-center justify-between gap-4 px-4 py-3 bg-white rounded-lg shadow-sm border border-gray-200">
              <!-- Previous Button -->
<a href="<%= page > 1 ? "/admin/coupon?page=" + (page - 1) : '#' %>"
class="inline-flex items-center px-5 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 hover:text-purple-700 transition-colors <%= page === 1 ? 'opacity-50 cursor-not-allowed pointer-events-none' : '' %>">

<svg class="w-5 h-5 mr-2"
     fill="none"
     stroke="currentColor"
     viewBox="0 0 24 24">

                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 19l-7-7 7-7"
                  />
                </svg>
                Previous
              </a>

              <!-- Current Page Indicator -->
              <div class="text-sm font-medium text-gray-700">
                Page <span class="text-purple-700 font-bold text-base"><%= page %> </span>
                of <%= totalPages %>
              </div>

              <!-- Next Button -->
              <a
                href="<%= page < totalPages ? "/admin/coupon?page=" + (page + 1) : "#" %>"
                class="inline-flex items-center px-5 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 hover:text-purple-700 transition-colors <%= page === totalPages ? 'opacity-50 cursor-not-allowed pointer-events-none' : '' %>"
              >
                Next
                <svg
                  class="w-5 h-5 ml-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </a>
            </div>
          </div>
        </main>
      </div>
    </div>
    <script>
      function deleteCoupon(couponId) {
        Swal.fire({
          title: "Are you sure?",
          text: "This will permanently delete the Coupon!",
          icon: "Warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, delete it",
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = `/admin/coupon/delete/${couponId}`;
          }
        });
      }
    </script>
  </body>
</html>
