<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management | Mambraville Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <%- include('../partials/admin/sidebar') %>

        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="bg-gradient-to-r from-black to-purple-900 text-white p-4 flex justify-between items-center">
                <h1 class="text-2xl font-bold">Dashboard</h1>
                
            </header>
            
            <!-- Content -->
            <main class="flex-1 overflow-y-auto p-6 bg-white m-4 rounded-lg shadow">

    <!-- Page Title -->
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Sales Report</h2>

    <!-- Filters Section -->
    <form method="GET" action="/admin/dashboard" class="grid grid-cols-4 gap-4 mb-6">
  <select name="filter" class="border px-3 py-2 rounded">
    <option value="daily"   <%= filter === 'daily' ? 'selected' : '' %>>Daily</option>
    <option value="weekly"  <%= filter === 'weekly' ? 'selected' : '' %>>Weekly</option>
    <option value="monthly" <%= filter === 'monthly' ? 'selected' : '' %>>Monthly</option>
    <option value="yearly"  <%= filter === 'yearly' ? 'selected' : '' %>>Yearly</option>
    <option value="custom"  <%= filter === 'custom' ? 'selected' : '' %>>Custom</option>
  </select>

  <input type="date" name="fromDate" value="<%= fromDate || '' %>" class="border px-3 py-2 rounded">
  <input type="date" name="toDate" value="<%= toDate || '' %>" class="border px-3 py-2 rounded">

  <button class="bg-black text-white rounded px-4 py-2">
    Apply
  </button>
</form>



    <!-- Summary Cards -->
    <div class="grid grid-cols-4 gap-4 mb-8">
  <div class="bg-gray-100 p-4 rounded">
    <p>Total Orders</p>
    <h2 class="text-xl font-bold"><%= report.totalOrders %></h2>
  </div>

  <div class="bg-gray-100 p-4 rounded">
    <p>Gross Sales</p>
    <h2 class="text-xl font-bold">₹ <%= grossSales %></h2>
  </div>

  <div class="bg-gray-100 p-4 rounded">
    <p>Coupon Discount</p>
    <h2 class="text-xl font-bold">₹ <%= report.couponDiscount %></h2>
  </div>

  <div class="bg-gray-100 p-4 rounded">
    <p>Net Sales</p>
    <h2 class="text-xl font-bold">₹ <%= report.netSales %></h2>
  </div>
</div>


    <!-- Sales Report Table -->
    <div class="overflow-x-auto bg-white rounded-lg shadow">
        <table class="w-full border">
  <thead class="bg-gray-200">
    <tr>
      <th class="p-2">Date</th>
      <th class="p-2">Orders</th>
      <th class="p-2">Discount</th>
      <th class="p-2">Net Amount</th>
    </tr>
  </thead>

  <tbody>
    <% if (tableData.length === 0) { %>
      <tr>
        <td colspan="4" class="text-center p-4">No data found</td>
      </tr>
    <% } %>

    <% tableData.forEach(row => { %>
      <tr class="border-t">
        <td class="p-2"><%= row._id %></td>
        <td class="p-2"><%= row.orders %></td>
        <td class="p-2">₹ <%= row.discount %></td>
        <td class="p-2">₹ <%= row.netAmount %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

    </div>

    <!-- Export Buttons -->
   <div class="flex justify-end gap-3 mt-6">
  <a
    href="/admin/sales-report/excel?filter=<%= filter %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>"
    class="bg-green-600 text-white px-5 py-2 rounded-lg">
    <i class="fas fa-file-excel mr-2"></i> Export Excel
  </a>

  <a
    href="/admin/sales-report/pdf?filter=<%= filter %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>"
    class="bg-red-600 text-white px-5 py-2 rounded-lg">
    <i class="fas fa-file-pdf mr-2"></i> Export PDF
  </a>
</div>


</main>

        </div>
    </div>
    
    <script>
        function logout() {
           
            window.location.href = '/admin/logout';
        }

      
    </script>
</body>
</html>