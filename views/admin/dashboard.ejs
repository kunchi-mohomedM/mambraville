<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management | Mambraville Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <%- include('../partials/admin/sidebar') %>

        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="bg-gradient-to-r from-black to-purple-900 text-white p-4 flex justify-between items-center">
                <h1 class="text-2xl font-bold">Dashboard</h1>
                
            </header>


            
            <!-- Content -->
            <main class="flex-1 overflow-y-auto p-6 bg-white m-4 rounded-lg shadow">


              
            <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
    <strong>Error:</strong> <%= errorMessage %>
  </div>
<% } %>

    <!-- Page Title -->
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Sales Report</h2>

    <!-- Filters Section -->
    <form method="GET" action="/admin/dashboard" class="grid grid-cols-4 gap-4 mb-6">
  <select name="filter" class="border px-3 py-2 rounded">
    <option value="daily"   <%= filter === 'daily' ? 'selected' : '' %>>Daily</option>
    <option value="weekly"  <%= filter === 'weekly' ? 'selected' : '' %>>Weekly</option>
    <option value="monthly" <%= filter === 'monthly' ? 'selected' : '' %>>Monthly</option>
    <option value="yearly"  <%= filter === 'yearly' ? 'selected' : '' %>>Yearly</option>
    <option value="custom"  <%= filter === 'custom' ? 'selected' : '' %>>Custom</option>
  </select>

<div class="hidden" id="fromDateWrapper">
  <input type="date" name="fromDate" value="<%= fromDate || '' %>" class="border px-3 py-2 rounded w-full">
</div>
<div class="hidden" id="toDateWrapper">
  <input type="date" name="toDate" value="<%= toDate || '' %>" class="border px-3 py-2 rounded w-full">
</div>

  <button class="bg-black text-white rounded px-4 py-2">
    Apply
  </button>
</form>



    <!-- Summary Cards -->
     
   <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
  <div class="bg-blue-100 p-6 rounded-lg text-center">
    <p class="text-gray-600">Total Orders</p>
    <h3 class="text-2xl font-bold"><%= totalOrders %></h3>
  </div>
  <div class="bg-green-100 p-6 rounded-lg text-center">
    <p class="text-gray-600">Gross Sales</p>
    <h3 class="text-2xl font-bold"><%= grossSales %></h3>
  </div>
  <div class="bg-yellow-100 p-6 rounded-lg text-center">
    <p class="text-gray-600">Total Discount</p>
    <h3 class="text-2xl font-bold">₹ <%= totalDiscount %></h3>
  </div>
  <div class="bg-purple-100 p-6 rounded-lg text-center">
    <p class="text-gray-600">Net Sales</p>
    <h3 class="text-2xl font-bold">₹ <%= netSales %></h3>
  </div>
  <div class="bg-red-100 p-6 rounded-lg text-center">
    <p class="text-gray-600">Total Refunds</p>
    <h3 class="text-2xl font-bold">₹ <%= totalRefunds %></h3>
  </div>
</div>



<!-- Latest 10 Orders -->
<h2 class="text-2xl font-bold text-gray-800 mt-12 mb-6">Latest 10 Orders</h2>
<div class="overflow-x-auto bg-white rounded-lg shadow mb-8">
  <table class="w-full border">
    <thead class="bg-gray-200">
      <tr>
        <th class="p-4 text-left">Order ID</th>
        <th class="p-4 text-left">Customer</th>
        <th class="p-4 text-left">Date</th>
        <th class="p-4 text-center">Items</th>
        <th class="p-4 text-right">Total</th>
        <th class="p-4 text-center">Status</th>
        <th class="p-4 text-center">Payment</th>
      </tr>
    </thead>
    <tbody>
      <% if (latestOrders.length === 0) { %>
        <tr>
          <td colspan="7" class="text-center p-8 text-gray-500">No orders found in this period</td>
        </tr>
      <% } else { %>
        <% latestOrders.forEach(order => { %>
          <tr class="border-t hover:bg-gray-50">
            <td class="p-4 font-medium">#<%= order.orderId %></td>
            <td class="p-4">
              <div>
                <div class="font-medium"><%= order.userId?.fullname || 'Guest' %></div>
                <div class="text-sm text-gray-500"><%= order.userId?.email || '-' %></div>
              </div>
            </td>
            <td class="p-4">
              <%= new Date(order.orderedAt).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' }) %>
              <br>
              <span class="text-sm text-gray-500">
                <%= new Date(order.orderedAt).toLocaleTimeString('en-IN', { hour: '2-digit', minute: '2-digit' }) %>
              </span>
            </td>
            <td class="p-4 text-center"><%= order.items.length %></td>
            <td class="p-4 text-right font-semibold">₹ <%= order.totalAmount.toFixed(2) %></td>
            <td class="p-4 text-center">
              <span class="px-3 py-1 rounded-full text-xs font-medium
                <% if (order.status === 'Delivered') { %> bg-green-100 text-green-800
                <% } else if (order.status === 'Cancelled' || order.status === 'Returned') { %> bg-red-100 text-red-800
                <% } else if (order.status === 'Shipped') { %> bg-blue-100 text-blue-800
                <% } else { %> bg-yellow-100 text-yellow-800 <% } %>">
                <%= order.status %>
              </span>
            </td>
            <td class="p-4 text-center">
              <span class="px-3 py-1 rounded-full text-xs font-medium
                <% if (order.paymentMethod === 'Razorpay') { %> bg-purple-100 text-purple-800
                <% } else if (order.paymentMethod === 'Wallet') { %> bg-indigo-100 text-indigo-800
                <% } else { %> bg-gray-100 text-gray-800 <% } %>">
                <%= order.paymentMethod %>
              </span>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>


    <!-- Sales Report Table -->
    <h2 class="text-2xl font-bold text-gray-800 mt-12 mb-6">Daily Sales Report</h2>
<div class="overflow-x-auto bg-white rounded-lg shadow">
  <table class="w-full border">
    <thead class="bg-gray-200">
      <tr>
        <th class="p-4 text-left font-semibold">Date</th>
        <th class="p-4 text-center font-semibold">Orders</th>
        <th class="p-4 text-right font-semibold">Discount</th>
        <th class="p-4 text-right font-semibold">Net Amount</th>
      </tr>
    </thead>

    <tbody>
      <% if (tableData.length === 0) { %>
        <tr>
          <td colspan="4" class="text-center p-8 text-gray-500">No data found</td>
        </tr>
      <% } else { %>
        <% tableData.forEach(row => { %>
          <tr class="border-t hover:bg-gray-50">
            <td class="p-4 text-left font-medium"><%= row._id %></td>
            <td class="p-4 text-center"><%= row.orders %></td>
            <td class="p-4 text-right">₹ <%= row.discount %></td>
            <td class="p-4 text-right font-semibold">₹ <%= row.netAmount %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

    <!-- Top 10 Products -->
<h2 class="text-2xl font-bold text-gray-800 mt-12 mb-6">Top 10 Best Selling Products</h2>
<div class="overflow-x-auto bg-white rounded-lg shadow mb-8">
  <table class="w-full border">
    <thead class="bg-gray-200">
      <tr>
        <th class="p-4 text-left">#</th>
        <th class="p-4 text-left">Product</th>
        <th class="p-4 text-center">Image</th>
        <th class="p-4 text-right">Qty Sold</th>
        <th class="p-4 text-right">Revenue</th>
      </tr>
    </thead>
    <tbody>
      <% if (topProducts.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center p-8">No products sold in this period</td>
        </tr>
      <% } else { %>
        <% topProducts.forEach((product, index) => { %>
          <tr class="border-t hover:bg-gray-50">
            <td class="p-4"><%= index + 1 %></td>
            <td class="p-4 font-medium"><%= product.name || 'Unknown Product' %></td>
            <td class="p-4 text-center">
              <% if (product.image) { %>
                <img src="<%= product.image %>" alt="<%= product.name %>" class="w-16 h-16 object-cover rounded mx-auto">
              <% } else { %>
                <div class="w-16 h-16 bg-gray-200 rounded mx-auto flex items-center justify-center">
                  <i class="fas fa-image text-gray-400"></i>
                </div>
              <% } %>
            </td>
            <td class="p-4 text-right font-semibold"><%= product.totalQty %></td>
            <td class="p-4 text-right">₹ <%= product.totalRevenue.toFixed(2) %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

<!-- Top 10 Customers -->
<h2 class="text-2xl font-bold text-gray-800 mb-6">Top 10 Customers</h2>
<div class="overflow-x-auto bg-white rounded-lg shadow mb-8">
  <table class="w-full border">
    <thead class="bg-gray-200">
      <tr>
        <th class="p-4 text-left">#</th>
        <th class="p-4 text-left">Customer Name</th>
        <th class="p-4 text-left">Email</th>
        <th class="p-4 text-right">Orders</th>
        <th class="p-4 text-right">Total Spent</th>
      </tr>
    </thead>
    <tbody>
      <% if (topCustomers.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center p-8">No customer data in this period</td>
        </tr>
      <% } else { %>
        <% topCustomers.forEach((customer, index) => { %>
          <tr class="border-t hover:bg-gray-50">
            <td class="p-4"><%= index + 1 %></td>
            <td class="p-4 font-medium"><%= customer.name %></td>
            <td class="p-4"><%= customer.email %></td>
            <td class="p-4 text-right"><%= customer.orderCount %></td>
            <td class="p-4 text-right font-semibold">₹ <%= customer.totalSpent.toFixed(2) %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

    <!-- Export Buttons -->
   <div class="flex justify-end gap-3 mt-6">
  <a
    href="/admin/sales-report/excel?filter=<%= filter %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>"
    class="bg-green-600 text-white px-5 py-2 rounded-lg">
    <i class="fas fa-file-excel mr-2"></i> Export Excel
  </a>

  <a
    href="/admin/sales-report/pdf?filter=<%= filter %>&fromDate=<%= fromDate %>&toDate=<%= toDate %>"
    class="bg-red-600 text-white px-5 py-2 rounded-lg">
    <i class="fas fa-file-pdf mr-2"></i> Export PDF
  </a>
</div>


</main>

        </div>
    </div>
    
    <script>
        function logout() {
           
            window.location.href = '/admin/logout';
        }

        const filterSelect = document.querySelector('select[name="filter"]');
  const fromDateInput = document.querySelector('input[name="fromDate"]');
  const toDateInput = document.querySelector('input[name="toDate"]');
  const today = new Date().toISOString().split('T')[0]; // YYYY-MM-DD format

  // Set max attribute to today (disable future dates)
  fromDateInput.setAttribute('max', today);
  toDateInput.setAttribute('max', today);

  // Function to update toDate min based on fromDate
  function updateToDateMin() {
    if (fromDateInput.value) {
      toDateInput.setAttribute('min', fromDateInput.value);
    } else {
      toDateInput.removeAttribute('min');
    }
  }

  // When filter changes to/from "custom", show/hide date inputs smoothly
  function toggleCustomDates() {
    if (filterSelect.value === 'custom') {
      fromDateInput.parentElement.style.display = 'block';
      toDateInput.parentElement.style.display = 'block';
      fromDateInput.required = true;
      toDateInput.required = true;
    } else {
      fromDateInput.parentElement.style.display = 'none';
      toDateInput.parentElement.style.display = 'none';
      fromDateInput.required = false;
      toDateInput.required = false;
      // Clear values when not custom
      fromDateInput.value = '';
      toDateInput.value = '';
    }
    updateToDateMin();
  }

  // Initial setup
  toggleCustomDates();

  // Event listeners
  filterSelect.addEventListener('change', toggleCustomDates);
  fromDateInput.addEventListener('change', updateToDateMin);

  // Optional: Prevent form submit if dates are invalid
  document.querySelector('form').addEventListener('submit', function(e) {
    if (filterSelect.value === 'custom') {
      if (!fromDateInput.value || !toDateInput.value) {
        e.preventDefault();
        alert('Please select both From and To dates for Custom filter.');
        return;
      }
      if (new Date(toDateInput.value) < new Date(fromDateInput.value)) {
        e.preventDefault();
        alert('To Date cannot be earlier than From Date.');
        return;
      }
    }
  });

      
    </script>
</body>
</html>