<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Category | Mambraville Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar (unchanged) -->
        <div class="w-64 bg-gradient-to-b from-black to-purple-900 text-white">
            <!-- Sidebar content remains the same -->
            <div class="p-4 flex items-center justify-center">
                <img src="/logo.png" alt="Mambraville" class="h-12">
            </div>
            <nav class="mt-6">
                <!-- Navigation links -->
            </nav>
            <div class="absolute bottom-4 left-0 w-64 px-6">
                <button onclick="logout()" class="bg-white text-black py-2 px-4 rounded-full w-full font-medium">
                    Logout
                </button>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header (unchanged) -->
            <header class="bg-gradient-to-r from-black to-purple-900 text-white p-4 flex justify-between items-center">
                <h1 class="text-2xl font-bold">Edit Category</h1>
                <!-- Header content -->
            </header>
            
            <!-- Content with Add Category Form -->
            <main class="flex-1 overflow-y-auto p-6 bg-white m-4 rounded-lg shadow">
                <div class="max-w-2xl mx-auto">
                    <h2 class="text-xl font-semibold mb-6">Edit Existing Category</h2>
                    <form id="categoryForm" class="space-y-6" method="POST" action="/admin/editCategory">
                    <input type="hidden" name="categoryId" value="<%=category._id%>">
                        <!-- Category Name -->
                        <div>
                            <label for="category-name" class="block text-sm font-medium text-gray-700 mb-1">
                                Category Name
                            </label>
                            <input 
                                type="text" 
                                id="category-name" 
                                name="categoryname"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                                placeholder="Enter category name"
                                value=<%= category.categoryname  %>
                               
                            >
                            <p id="name-error" class="text-red-500 text-sm mt-1 hidden">Category name is required</p>
                        </div>

                        <!-- Description -->
                        <div>
                            <label for="category-desc" class="block text-sm font-medium text-gray-700 mb-1">
                                Description
                            </label>
                            <textarea 
                                id="category-desc" 
                                name="categorydesc" 
                                rows="4"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                                placeholder="Enter category description"
                              
                                
                            ><%= category.description  %></textarea>
                        </div>

                        <!-- Add Button -->
                        <div class="flex justify-end">
                            <button 
                                type="submit"
                                class="bg-purple-900 text-white px-6 py-2 rounded-md hover:bg-purple-800 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-offset-2"
                            >
                                Edit Category
                            </button>
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </div>
    
    <script>
       const form= document.getElementById('categoryForm')
        form.addEventListener('submit', async function (e) {
            e.preventDefault(); // Prevent default form submission
            const categoryName = document.getElementById('category-name').value.trim();
            const categoryDesc = document.getElementById('category-desc').value.trim();
            const nameError = document.getElementById('name-error');

            // Client-side validation
            if (!categoryName) {
                nameError.classList.remove('hidden');
                return;
            } else {
                nameError.classList.add('hidden');
            }

            form.submit()

        });

        function logout() {
            window.location.href = '/admin/logout';
        }
    </script>
</body>
</html>